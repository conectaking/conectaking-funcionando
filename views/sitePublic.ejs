        :root {
            --bg: <%= site.tema_primaria || '#0a0a0a' %>;
            --accent: <%= site.tema_secundaria || '#c9a227' %>;
            --text: #f2f2f2;
            --text-muted: rgba(255,255,255,.65);
            --border: rgba(255,255,255,.08);
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        html { scroll-behavior: smooth; }
        body {
            font-family: 'Outfit', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            line-height: 1.65;
            font-weight: 400;
        }
        .site-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.25rem 2rem;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: linear-gradient(to bottom, rgba(10,10,10,.95) 0%, rgba(10,10,10,.6) 80%, transparent 100%);
            z-index: 100;
            backdrop-filter: blur(12px);
        }
        .site-logo {
            font-family: 'Cormorant Garamond', serif;
            font-weight: 600;
            font-size: 1.35rem;
            letter-spacing: 0.02em;
            color: #fff;
            text-decoration: none;
        }
        .site-nav {
            display: flex;
            align-items: center;
            gap: 2rem;
            flex-wrap: wrap;
        }
        .site-nav a {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            letter-spacing: 0.02em;
            transition: color .2s;
        }
        .site-nav a:hover { color: var(--accent); }
        .site-nav .nav-whatsapp { color: #25d366; }
        .site-nav .nav-whatsapp:hover { color: #2ee66d; }

        .hero {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 6rem 1.5rem 4rem;
        }
        .hero h1 {
            font-family: 'Cormorant Garamond', serif;
            font-size: clamp(1.85rem, 5vw, 3rem);
            font-weight: 600;
            line-height: 1.25;
            max-width: 680px;
            margin-bottom: 1.25rem;
            letter-spacing: -0.02em;
        }
        .hero .slogan {
            font-size: clamp(1.05rem, 2.2vw, 1.35rem);
            color: var(--accent);
            font-weight: 400;
            max-width: 560px;
            margin-bottom: 0.5rem;
            letter-spacing: 0.01em;
        }
        .hero .hero-line {
            width: 60px;
            height: 1px;
            background: var(--accent);
            opacity: .6;
            margin: 1.5rem auto 2rem;
        }
        .hero .ctas {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
            margin-top: 0.5rem;
        }
        .cta-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 1rem 1.75rem;
            border-radius: 999px;
            font-family: 'Outfit', sans-serif;
            font-weight: 500;
            font-size: 0.95rem;
            text-decoration: none;
            transition: transform .2s, box-shadow .2s, background .2s;
            letter-spacing: 0.02em;
        }
        .cta-btn.primary {
            background: var(--accent);
            color: #0a0a0a;
            border: none;
        }
        .cta-btn.primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(201,162,39,.25);
        }
        .cta-btn.secondary {
            background: transparent;
            color: var(--text);
            border: 1px solid var(--border);
        }
        .cta-btn.secondary:hover {
            background: rgba(255,255,255,.06);
            border-color: rgba(255,255,255,.15);
        }

        .section {
            padding: 4.5rem 1.5rem;
            max-width: 720px;
            margin: 0 auto;
        }
        .section-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--accent);
            margin-bottom: 1.25rem;
            letter-spacing: 0.02em;
        }
        .section p { color: var(--text-muted); margin-bottom: 1rem; font-size: 1rem; }
        .section .card {
            background: rgba(255,255,255,.03);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 2rem;
            margin-top: 1.5rem;
        }
        .form-input, .form-select {
            width: 100%;
            padding: 1rem 1.1rem;
            border-radius: 12px;
            border: 1px solid var(--border);
            background: rgba(0,0,0,.25);
            color: var(--text);
            font-family: inherit;
            font-size: 1rem;
            margin-bottom: 1rem;
            transition: border-color .2s, box-shadow .2s;
        }
        .form-input::placeholder { color: rgba(255,255,255,.4); }
        .form-input:focus, .form-select:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(201,162,39,.12);
        }
        .form-select { cursor: pointer; }
        .form-label { display: block; color: var(--text-muted); font-size: 0.9rem; margin-bottom: 0.5rem; }
        .btn-submit {
            width: 100%;
            padding: 1rem 1.5rem;
            border-radius: 999px;
            border: none;
            background: var(--accent);
            color: #0a0a0a;
            font-family: inherit;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: transform .2s, box-shadow .2s;
        }
        .btn-submit:hover { transform: translateY(-1px); box-shadow: 0 6px 20px rgba(201,162,39,.3); }

        .site-footer {
            padding: 3rem 1.5rem;
            text-align: center;
            border-top: 1px solid var(--border);
            color: var(--text-muted);
            font-size: 0.9rem;
        }
        .site-footer a { color: var(--accent); text-decoration: none; margin: 0 0.5rem; }
        .site-footer a:hover { text-decoration: underline; }
        .quiz-option:hover { border-color: rgba(255,255,255,.25); background: rgba(255,255,255,.06); }
        .quiz-option.selected { border-color: var(--accent); background: rgba(201,162,39,.15); }
        @media (max-width: 640px) {
            .site-nav { gap: 1.25rem; }
            .hero { padding-top: 5rem; }
        }
    </style>
</head>
