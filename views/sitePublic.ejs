        <div style="max-width:480px;padding:1.5rem;background:rgba(255,255,255,.06);border-radius:12px;">
            <form id="form-orcamento">
                <input type="text" name="nome" placeholder="Nome *" required style="width:100%;padding:12px;margin-bottom:10px;border-radius:8px;border:1px solid rgba(255,255,255,.2);background:rgba(0,0,0,.3);color:#fff;">
                <input type="email" name="email" placeholder="E-mail *" required style="width:100%;padding:12px;margin-bottom:10px;border-radius:8px;border:1px solid rgba(255,255,255,.2);background:rgba(0,0,0,.3);color:#fff;">
                <input type="text" name="whatsapp" placeholder="WhatsApp (com DDD)" style="width:100%;padding:12px;margin-bottom:10px;border-radius:8px;border:1px solid rgba(255,255,255,.2);background:rgba(0,0,0,.3);color:#fff;">
                <input type="text" name="profissao" placeholder="Profissão / área" style="width:100%;padding:12px;margin-bottom:10px;border-radius:8px;border:1px solid rgba(255,255,255,.2);background:rgba(0,0,0,.3);color:#fff;">
