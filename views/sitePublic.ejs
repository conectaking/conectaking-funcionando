            if (startBtn) startBtn.addEventListener('click', function(e) { e.preventDefault(); if (landing) landing.style.display = 'none'; if (quiz) quiz.style.display = 'block'; arquetipoGoTo(1); });
            var answers = [];
            var currentStep = 1;
            var progressBar = document.getElementById('arquetipo-progress-bar');
            var stepLabel = document.getElementById('arquetipo-step-label');
            var statementEl = document.getElementById('arquetipo-statement');
            var prevBtn = document.getElementById('arquetipo-prev');
            var nextBtn = document.getElementById('arquetipo-next');
            function arquetipoGoTo(step) {
                currentStep = step;
                if (progressBar) progressBar.style.width = ((step - 1) / 48 * 100) + '%';
                if (stepLabel) stepLabel.textContent = 'Pergunta ' + step + ' de 48';
                var p = PERGUNTAS[step - 1];
                if (statementEl && p) statementEl.textContent = p.texto;
                if (prevBtn) prevBtn.style.display = step > 1 ? 'block' : 'none';
                if (nextBtn) nextBtn.textContent = step === 48 ? 'Ver resultado' : 'Próxima';
                var chosen = answers[step - 1];
                document.querySelectorAll('.quiz-option').forEach(function(btn) {
                    var isChosen = chosen && parseInt(btn.getAttribute('data-value'), 10) === chosen;
                    btn.style.background = isChosen ? 'rgba(201,162,39,.25)' : 'rgba(0,0,0,.2)';
                    btn.style.borderColor = isChosen ? 'var(--accent)' : 'var(--border)';
                });
            }
            document.querySelectorAll('.quiz-option').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var v = parseInt(btn.getAttribute('data-value'), 10);
                    answers[currentStep - 1] = v;
                    arquetipoGoTo(currentStep);
                });
            });
            if (prevBtn) prevBtn.addEventListener('click', function() { if (currentStep > 1) arquetipoGoTo(currentStep - 1); });
            if (nextBtn) nextBtn.addEventListener('click', function() {
                if (currentStep < 48) arquetipoGoTo(currentStep + 1);
                else {
                    var scores = {};
                    Object.keys(ARQUETIPOS).forEach(function(k) { scores[k] = 0; });
                    PERGUNTAS.forEach(function(p, i) { scores[p.arquetipo] = (scores[p.arquetipo] || 0) + (answers[i] || 0); });
                    var dominant = Object.keys(scores).sort(function(a, b) { return scores[b] - scores[a]; })[0];
                    if (quiz) quiz.style.display = 'none';
                    if (result) {
                        result.style.display = 'block';
                        var titleEl = document.getElementById('arquetipo-result-title');
                        var descEl = document.getElementById('arquetipo-result-desc');
                        if (titleEl) titleEl.textContent = 'Seu arquétipo predominante: ' + (ARQUETIPOS[dominant] || dominant);
                        if (descEl) descEl.textContent = 'Este arquétipo reflete traços fortes da sua forma de ver o mundo e se posicionar. Preencha abaixo para receber um resumo completo por e-mail.';
                    }
                    window.__arquetipoResultado = dominant;
                    window.__arquetipoScores = scores;
                }
            });
            var form = document.getElementById('form-arquetipo');
            if (form) {
                var msg = document.getElementById('arquetipo-msg');
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    var fd = new FormData(form);
                    var payload = {
                        nome: fd.get('nome'),
                        email: fd.get('email'),
                        whatsapp: fd.get('whatsapp') || '',
                        instagram: fd.get('instagram') || '',
                        arquetipo_resultado: window.__arquetipoResultado || '',
                        arquetipo_scores: window.__arquetipoScores || {}
                    };
                    fetch(formBasePath + '/site/arquetipo', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    }).then(function(r) { return r.json(); }).then(function(data) {
                        if (msg) { msg.style.display = 'block'; msg.textContent = data.message || (data.success ? 'Recebemos seus dados. Em breve você receberá seu resultado.' : 'Erro ao enviar.'); msg.style.color = data.success ? '#8f8' : '#f88'; }
                        if (data.success && form) form.reset();
                    }).catch(function() {
                        if (msg) { msg.style.display = 'block'; msg.textContent = 'Erro ao enviar. Tente novamente.'; msg.style.color = '#f88'; }
                    });
                });
            }
        })();
        (function() {
            var form = document.getElementById('form-orcamento');
            if (!form) return;
            var msg = document.getElementById('orcamento-msg');
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                var fd = new FormData(form);
                var formBasePath = '<%= typeof formBasePath !== "undefined" ? formBasePath : ("/" + (slug || "")) %>';
                var payload = {
                    nome: fd.get('nome'),
                    email: fd.get('email'),
                    whatsapp: fd.get('whatsapp') || '',
                    profissao: fd.get('profissao') || '',
                    respostas: {
                        faixa_investimento: fd.get('faixa_investimento') || '',
                        objetivo_fotos: fd.get('objetivo_fotos') || '',
                        quando_precisa: fd.get('quando_precisa') || '',
                        decisao_sozinho: fd.get('decisao_sozinho') || ''
                    }
                };
                fetch(formBasePath + '/site/orcamento', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                }).then(function(r) { return r.json(); }).then(function(data) {
                    msg.style.display = 'block';
                    msg.textContent = data.message || (data.success ? 'Recebemos seu pedido. Em breve entraremos em contato.' : 'Erro ao enviar.');
                    msg.style.color = data.success ? '#8f8' : '#f88';
                    if (data.success) form.reset();
                }).catch(function() {
                    msg.style.display = 'block';
                    msg.textContent = 'Erro ao enviar. Tente novamente.';
                    msg.style.color = '#f88';
                });
            });
        })();
    </script>
