                <select name="decisao_sozinho" style="width:100%;padding:12px;margin-bottom:12px;border-radius:8px;border:1px solid rgba(255,255,255,.2);background:rgba(0,0,0,.3);color:#fff;">
                    <option value="">Selecione</option>
                    <option value="sim">Sim</option>
                    <option value="nao">Não (empresa/parceiro)</option>
                </select>
                <button type="submit" class="cta-btn primary" style="width:100%;border:none;cursor:pointer;">Enviar pedido de orçamento</button>
            </form>
            <p id="orcamento-msg" style="margin-top:12px;font-size:.9rem;display:none;"></p>
        </div>
    </section>

    <section class="section" id="contato">
        <h2>Contato</h2>
        <% if (site.contato_email) { %><p>E-mail: <a href="mailto:<%= site.contato_email %>"><%= site.contato_email %></a></p><% } %>
        <% if (site.contato_whatsapp) { %><p>WhatsApp: <a href="https://wa.me/<%= site.contato_whatsapp.replace(/\D/g,'') %>"><%= site.contato_whatsapp %></a></p><% } %>
        <% if (site.contato_horario) { %><p><%= site.contato_horario %></p><% } %>
    </section>

    <footer class="site-footer">
        <% if (site.rede_instagram) { %><a href="<%= site.rede_instagram %>" target="_blank" rel="noopener"><i class="fab fa-instagram"></i></a><% } %>
        <% if (site.rede_facebook) { %><a href="<%= site.rede_facebook %>" target="_blank" rel="noopener"><i class="fab fa-facebook"></i></a><% } %>
        <p style="margin-top:1rem;">© ConectaKing</p>
    </footer>

