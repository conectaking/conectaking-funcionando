    <script>
        (function() {
            var formBasePath = '<%= typeof formBasePath !== "undefined" ? formBasePath : ("/" + (slug || "")) %>';

            function showPage(pageId) {
                var pages = document.querySelectorAll('.site-page');
                var navLinks = document.querySelectorAll('.nav-link-tab');
                pageId = pageId || 'inicio';
                pages.forEach(function(p) {
                    p.classList.toggle('active', p.getAttribute('data-page') === pageId);
                });
                navLinks.forEach(function(a) {
                    a.classList.toggle('nav-active', a.getAttribute('data-goto') === pageId);
                });
                if (history.replaceState) history.replaceState(null, '', '#' + pageId);
            }
            function onHashChange() {
                var hash = (location.hash || '#inicio').replace('#', '');
                if (['inicio','sobre','arquetipo','orcamento','contato'].indexOf(hash) >= 0) showPage(hash);
                else showPage('inicio');
            }
            document.querySelectorAll('[data-goto]').forEach(function(a) {
                if (a.classList && a.classList.contains('nav-whatsapp')) return;
                if (a.href && a.href.indexOf('wa.me') >= 0) return;
                a.addEventListener('click', function(e) {
                    var go = a.getAttribute('data-goto');
                    if (go) { e.preventDefault(); showPage(go); }
                });
            });
            window.addEventListener('hashchange', onHashChange);
            onHashChange();
        })();
        (function() {
            var formBasePath = '<%= typeof formBasePath !== "undefined" ? formBasePath : ("/" + (slug || "")) %>';
            var ARQUETIPOS = { inocente:'O Inocente', sabio:'O Sábio', explorador:'O Explorador', criador:'O Criador', governante:'O Governante', mago:'O Mago', amante:'O Amante', heroi:'O Herói', bufao:'O Bufão', cidadao:'O Cidadão', cuidador:'O Cuidador', revolucionario:'O Revolucionário' };
            var PERGUNTAS = [
                { arquetipo:'inocente', texto:'Acredito que as coisas podem ser simples e boas.' },
                { arquetipo:'inocente', texto:'Prefiro ver o lado positivo das pessoas e das situações.' },
                { arquetipo:'inocente', texto:'Confio que, no fundo, as pessoas querem o bem.' },
                { arquetipo:'inocente', texto:'Gosto de manter um ambiente leve e sem conflitos.' },
                { arquetipo:'sabio', texto:'Busco entender as coisas a fundo antes de decidir.' },
                { arquetipo:'sabio', texto:'Valorizo conhecimento e reflexão.' },
                { arquetipo:'sabio', texto:'Gosto de compartilhar o que aprendi com os outros.' },
                { arquetipo:'sabio', texto:'A verdade e a clareza são muito importantes para mim.' },
                { arquetipo:'explorador', texto:'Gosto de experimentar coisas novas e sair da rotina.' },
                { arquetipo:'explorador', texto:'A liberdade e a autonomia são essenciais para mim.' },
                { arquetipo:'explorador', texto:'Curiosidade me move a descobrir novos caminhos.' },
                { arquetipo:'explorador', texto:'Prefiro criar meu próprio caminho a seguir regras prontas.' },
                { arquetipo:'criador', texto:'Tenho necessidade de expressar minha visão de forma única.' },
                { arquetipo:'criador', texto:'Qualidade e estética fazem muita diferença no que faço.' },
                { arquetipo:'criador', texto:'Gosto de transformar ideias em algo concreto e belo.' },
                { arquetipo:'criador', texto:'A criatividade é central na minha vida e no meu trabalho.' },
                { arquetipo:'governante', texto:'Gosto de tomar as rédeas e garantir que tudo funcione.' },
                { arquetipo:'governante', texto:'Responsabilidade e liderança me motivam.' },
                { arquetipo:'governante', texto:'Quero construir algo que perdure e tenha impacto.' },
                { arquetipo:'governante', texto:'A ordem e a estrutura me ajudam a performar melhor.' },
                { arquetipo:'mago', texto:'Acredito que é possível transformar situações com a atitude certa.' },
                { arquetipo:'mago', texto:'Busco entender o que está por trás das aparências.' },
                { arquetipo:'mago', texto:'Gosto de inspirar mudança nas pessoas.' },
                { arquetipo:'mago', texto:'Vejo possibilidades onde outros veem limites.' },
                { arquetipo:'amante', texto:'Valorizo muito conexão, beleza e experiência sensorial.' },
                { arquetipo:'amante', texto:'Quero que meu trabalho transmita emoção e autenticidade.' },
                { arquetipo:'amante', texto:'Relacionamentos profundos são fundamentais para mim.' },
                { arquetipo:'amante', texto:'Busco o que é genuíno e significativo.' },
                { arquetipo:'heroi', texto:'Gosto de superar desafios e provar minha capacidade.' },
                { arquetipo:'heroi', texto:'Competência e coragem são valores que me guiam.' },
                { arquetipo:'heroi', texto:'Quero ser reconhecido pelo que conquisto.' },
                { arquetipo:'heroi', texto:'Persisto até alcançar o resultado que desejo.' },
                { arquetipo:'bufao', texto:'Humor e leveza ajudam a conectar com as pessoas.' },
                { arquetipo:'bufao', texto:'Gosto de quebrar o gelo e deixar o ambiente mais solto.' },
