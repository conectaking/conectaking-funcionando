            <a href="https://wa.me/<%= site.contato_whatsapp.replace(/\D/g,'') %><%= site.contato_whatsapp_mensagem ? '?text=' + encodeURIComponent(site.contato_whatsapp_mensagem) : '' %>" class="cta-btn secondary" target="_blank" rel="noopener"><i class="fab fa-whatsapp"></i> <%= site.hero_cta_contato_texto || 'Agendar / Falar comigo' %></a>
            <% } else { %>
            <a href="#contato" class="cta-btn secondary"><%= site.hero_cta_contato_texto || 'Agendar / Falar comigo' %></a>
