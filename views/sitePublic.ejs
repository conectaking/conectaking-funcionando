        <h2 class="section-title">Contato</h2>
        <% if (site.contato_email) { %><p>E-mail: <a href="mailto:<%= site.contato_email %>" style="color:var(--accent);"><%= site.contato_email %></a></p><% } %>
        <% if (site.contato_whatsapp) { %><p>WhatsApp: <a href="https://wa.me/<%= site.contato_whatsapp.replace(/\D/g,'') %>" style="color:#25d366;"><%= site.contato_whatsapp %></a></p><% } %>
        <% if (site.contato_horario) { %><p><%= site.contato_horario %></p><% } %>
    </section>

    <footer class="site-footer">
