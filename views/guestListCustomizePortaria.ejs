        async function handleImageUpload(type, input) {
            const file = input.files[0];
            if (!file) return;
            
            // Verificar se ainda temos o token
            if (!authToken) {
                const currentUrlParams = new URLSearchParams(window.location.search);
                let tokenFromUrl = currentUrlParams.get('token');
                if (tokenFromUrl) {
                    try {
                        tokenFromUrl = decodeURIComponent(tokenFromUrl);
                    } catch (e) {}
                }
                authToken = tokenFromUrl || localStorage.getItem('conectaKingToken') || localStorage.getItem('token') || '';
            }
            
            if (!authToken) {
                alert('Erro: Token de autentica√ß√£o n√£o encontrado. Por favor, fa√ßa login novamente.');
                return;
            }
            
            const formData = new FormData();
            formData.append('image', file);
            
            try {
                // Determinar URL base (usar URL completa se necess√°rio)
                const apiBaseUrl = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1' 
                    ? 'https://conectaking-api.onrender.com' 
                    : '';
                
                const response = await fetch(`${apiBaseUrl}/api/upload/image`, {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${authToken}`
                    },
                    body: formData
                });
                
                console.log('üì• Resposta do upload:', {
                    status: response.status,
                    statusText: response.statusText,
                    ok: response.ok
                });
                
                // Verificar se a resposta √© JSON antes de fazer parse
                const contentType = response.headers.get('content-type');
                let data;
                
                if (contentType && contentType.includes('application/json')) {
                    data = await response.json();
                } else {
                    const text = await response.text();
                    console.error('Resposta n√£o √© JSON:', text);
                    throw new Error(`Resposta inv√°lida do servidor: ${text.substring(0, 200)}`);
                }
                
                if (response.ok && data.url) {
                    const urlField = type === 'header_image' ? 'header_image_url' : 
                                   type === 'logo_image' ? 'form_logo_url' : 
                                   'background_image_url';
                    const previewId = type === 'header_image' ? 'header_image_preview' : 
                                    type === 'logo_image' ? 'logo_image_preview' : 
                                    'background_image_preview';
                    
                    document.getElementById(urlField).value = data.url;
                    const preview = document.getElementById(previewId);
                    if (preview) {
                        preview.src = data.url;
                        preview.parentElement.classList.add('has-image');
                    }
                    console.log('‚úÖ Imagem enviada com sucesso:', data.url);
                } else {
                    const errorMessage = data.message || data.error || 'Erro desconhecido';
                    console.error('‚ùå Erro no upload:', data);
                    alert('‚ùå Erro ao fazer upload: ' + errorMessage);
                }
            } catch (error) {
                console.error('‚ùå Erro ao fazer upload:', error);
                console.error('‚ùå Stack trace:', error.stack);
                alert('‚ùå Erro ao fazer upload da imagem: ' + (error.message || 'Erro de conex√£o. Verifique sua internet e tente novamente.'));
            }
        }
        
