    <script>
        const profileItemId = <%= profileItemId %>;
        
        // Obter token da URL (query string) ou do localStorage
        // Usar vari√°vel global para garantir acesso em todas as fun√ß√µes
        const urlParams = new URLSearchParams(window.location.search);
        window.urlParams = urlParams; // Tornar global para acesso em fun√ß√µes
        let authToken = urlParams.get('token');
        
        // Se o token veio da URL, pode estar codificado - tentar decodificar
        if (authToken) {
            try {
                // Tentar decodificar se necess√°rio
                authToken = decodeURIComponent(authToken);
            } catch (e) {
                console.warn('Aviso ao decodificar token da URL:', e);
            }
        }
        
        // Se n√£o tiver token na URL, tentar do localStorage
        if (!authToken) {
            authToken = localStorage.getItem('conectaKingToken') || localStorage.getItem('token') || '';
        }
        
        console.log('üîë Token obtido:', {
            fromUrl: !!urlParams.get('token'),
            fromLocalStorage: !!localStorage.getItem('conectaKingToken') || !!localStorage.getItem('token'),
            hasToken: !!authToken,
            tokenLength: authToken ? authToken.length : 0,
            tokenPreview: authToken ? authToken.substring(0, 20) + '...' : 'none'
        });
        
        // Se n√£o tiver token, mostrar erro e tentar obter novamente
        if (!authToken) {
            console.error('‚ùå Token n√£o encontrado na URL nem no localStorage');
            console.error('‚ùå URL completa:', window.location.href);
            console.error('‚ùå Query params:', window.location.search);
            alert('Erro: Token de autentica√ß√£o n√£o encontrado.\n\nPor favor:\n1. Feche esta p√°gina\n2. Volte para a p√°gina de edi√ß√£o do formul√°rio\n3. Clique novamente em "Personalizar Link da Portaria"');
        } else {
            // Salvar token no localStorage para uso futuro
            localStorage.setItem('conectaKingToken', authToken);
            console.log('‚úÖ Token salvo no localStorage');
        }
        
        // Selecionar tema ativo
        document.querySelector(`[data-theme="<%= guestList.theme_portaria || 'default' %>"]`)?.classList.add('active');
        
        function selectTheme(theme) {
            document.querySelectorAll('.theme-card').forEach(card => card.classList.remove('active'));
            document.querySelector(`[data-theme="${theme}"]`)?.classList.add('active');
            document.getElementById('theme_portaria').value = theme;
            applyTheme(theme);
        }
        
        function applyTheme(theme) {
            const themes = {
