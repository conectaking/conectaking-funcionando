<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Convidados - <%= guestList.event_title || 'Evento' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0D0D0F 0%, #1C1C21 100%);
            min-height: 100vh;
            padding: 20px;
            color: #ECECEC;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px 0;
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 20px;
        }
        
        .header h1 {
            font-size: 32px;
            font-weight: 800;
            color: #FFC700;
            margin-bottom: 12px;
        }
        
        .header p {
            color: #A1A1A1;
            font-size: 16px;
        }
        
        .tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 24px;
            border-bottom: 2px solid #2C2C2F;
        }
        
        .tab-button {
            padding: 12px 24px;
            background: transparent;
            border: none;
            color: #A1A1A1;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
            position: relative;
            top: 2px;
        }
        
        .tab-button.active {
            color: #FFC700;
            border-bottom-color: #FFC700;
        }
        
        .tab-button:hover {
            color: #ECECEC;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .guests-table {
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 12px;
            overflow: hidden;
        }
        
        .table-header {
            background: #2C2C2F;
            padding: 16px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
            gap: 16px;
            font-weight: 600;
            color: #ECECEC;
        }
        
        .table-row {
            padding: 16px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
            gap: 16px;
            border-bottom: 1px solid #2C2C2F;
            align-items: center;
        }
        
        .table-row:last-child {
            border-bottom: none;
        }
        
        .table-row:hover {
            background: rgba(255, 199, 0, 0.05);
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }
        
        .status-registered {
            background: rgba(74, 144, 226, 0.2);
            color: #4A90E2;
        }
        
        .status-confirmed {
            background: rgba(255, 199, 0, 0.2);
            color: #FFC700;
        }
        
        .status-checked_in {
            background: rgba(37, 211, 102, 0.2);
            color: #25D366;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #A1A1A1;
        }
        
        .empty-state i {
            font-size: 64px;
            margin-bottom: 16px;
            opacity: 0.3;
        }
        
        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .stat-card {
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }
        
        .stat-card .stat-value {
            font-size: 32px;
            font-weight: 800;
            color: #FFC700;
            margin: 8px 0;
        }
        
        .stat-card .stat-label {
            color: #A1A1A1;
            font-size: 14px;
        }
        
        @media (max-width: 768px) {
            .table-header,
            .table-row {
                grid-template-columns: 1fr;
                gap: 8px;
            }
            
            .stats-summary {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-users"></i> <%= guestList.event_title || 'Lista de Convidados' %></h1>
            <p>Visualização completa para portaria</p>
        </div>
        
        <div class="stats-summary">
            <div class="stat-card">
                <div class="stat-label">Cadastrados</div>
                <div class="stat-value"><%= registeredGuests.length %></div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Confirmados</div>
                <div class="stat-value"><%= confirmedGuests.length %></div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Conferidos</div>
                <div class="stat-value"><%= checkedInGuests.length %></div>
            </div>
        </div>
        
        <div class="tabs">
            <button class="tab-button active" onclick="switchTab('registered')">
                <i class="fas fa-user-plus"></i> Cadastrados (<%= registeredGuests.length %>)
            </button>
            <button class="tab-button" onclick="switchTab('checked_in')">
                <i class="fas fa-check-circle"></i> Quem Chegou (<%= checkedInGuests.length %>)
            </button>
            <button class="tab-button" onclick="switchTab('not_arrived')">
                <i class="fas fa-clock"></i> Quem Não Chegou (<%= notArrivedGuests ? notArrivedGuests.length : 0 %>)
            </button>
        </div>
        
        <!-- Tab: Cadastrados -->
        <div id="tab-registered" class="tab-content active">
            <div class="guests-table">
                <div class="table-header">
                    <div>Nome Completo</div>
                    <div>Email</div>
                    <div>WhatsApp</div>
                    <div>Status</div>
                    <div>Inscrito em</div>
                </div>
                <% if (registeredGuests.length === 0) { %>
                    <div class="empty-state">
                        <i class="fas fa-user-plus"></i>
                        <p>Nenhum convidado cadastrado</p>
                    </div>
                <% } else { %>
                    <% registeredGuests.forEach(guest => { %>
                        <div class="table-row">
                            <div style="font-weight: 600;"><%= guest.name || 'Sem nome' %></div>
                            <div><%= guest.email || '-' %></div>
                            <div><%= guest.whatsapp || guest.phone || '-' %></div>
                            <div><span class="status-badge status-<%= guest.status %>">Inscrito</span></div>
                            <div><%= new Date(guest.created_at).toLocaleString('pt-BR') %></div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
        
        <!-- Tab: Confirmados -->
        <div id="tab-confirmed" class="tab-content">
            <div class="guests-table">
                <div class="table-header">
                    <div>Nome Completo</div>
                    <div>Email</div>
                    <div>WhatsApp</div>
                    <div>Status</div>
                    <div>Confirmado em</div>
                </div>
                <% if (confirmedGuests.length === 0) { %>
                    <div class="empty-state">
                        <i class="fas fa-check-circle"></i>
                        <p>Nenhum convidado confirmado</p>
                    </div>
                <% } else { %>
                    <% confirmedGuests.forEach(guest => { %>
                        <div class="table-row">
                            <div style="font-weight: 600;"><%= guest.name || 'Sem nome' %></div>
                            <div><%= guest.email || '-' %></div>
                            <div><%= guest.whatsapp || guest.phone || '-' %></div>
                            <div><span class="status-badge status-<%= guest.status %>">Confirmado</span></div>
                            <div><%= guest.confirmed_at ? new Date(guest.confirmed_at).toLocaleString('pt-BR') : '-' %></div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
        
        <!-- Tab: Conferidos -->
        <div id="tab-checked_in" class="tab-content">
            <div class="guests-table">
                <div class="table-header">
                    <div>Nome Completo</div>
                    <div>Email</div>
                    <div>WhatsApp</div>
                    <div>Status</div>
                    <div>Conferido em</div>
                </div>
                <% if (checkedInGuests.length === 0) { %>
                    <div class="empty-state">
                        <i class="fas fa-check-double"></i>
                        <p>Nenhum convidado conferido</p>
                    </div>
                <% } else { %>
                    <% checkedInGuests.forEach(guest => { %>
                        <div class="table-row">
                            <div style="font-weight: 600;"><%= guest.name || 'Sem nome' %></div>
                            <div><%= guest.email || '-' %></div>
                            <div><%= guest.whatsapp || guest.phone || '-' %></div>
                            <div><span class="status-badge status-checked_in">Conferido</span></div>
                            <div><%= guest.checked_in_at ? new Date(guest.checked_in_at).toLocaleString('pt-BR') : '-' %></div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>
    
    <script>
        function switchTab(tabName) {
            // Remover active de todas as tabs
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Ativar tab selecionada
            event.target.classList.add('active');
            document.getElementById(`tab-${tabName}`).classList.add('active');
        }
    </script>
</body>
</html>
