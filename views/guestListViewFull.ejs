    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0D0D0F 0%, #1C1C21 100%);
            min-height: 100vh;
            padding: 20px;
            color: #ECECEC;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px 0;
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 20px;
        }
        
        .header h1 {
            font-size: 32px;
            font-weight: 800;
            color: #FFC700;
            margin-bottom: 12px;
        }
        
        .header p {
            color: #A1A1A1;
            font-size: 16px;
        }
        
        .tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 24px;
            border-bottom: 2px solid #2C2C2F;
        }
        
        .tab-button {
            padding: 12px 24px;
            background: transparent;
            border: none;
            color: #A1A1A1;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
            position: relative;
            top: 2px;
        }
        
        .tab-button.active {
            color: #FFC700;
            border-bottom-color: #FFC700;
        }
        
        .tab-button:hover {
            color: #ECECEC;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .guests-table {
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 12px;
            overflow: hidden;
        }
        
        .table-header {
            background: #2C2C2F;
            padding: 16px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
            gap: 16px;
            font-weight: 600;
            color: #ECECEC;
        }
        
        .table-row {
            padding: 16px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
            gap: 16px;
            border-bottom: 1px solid #2C2C2F;
            align-items: center;
        }
        
        .table-row:last-child {
            border-bottom: none;
        }
        
        .table-row:hover {
            background: rgba(255, 199, 0, 0.05);
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }
        
        .status-registered {
            background: rgba(74, 144, 226, 0.2);
            color: #4A90E2;
        }
        
        .status-confirmed {
            background: rgba(255, 199, 0, 0.2);
            color: #FFC700;
        }
        
        .status-checked_in {
            background: rgba(37, 211, 102, 0.2);
            color: #25D366;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #A1A1A1;
        }
        
        .empty-state i {
            font-size: 64px;
            margin-bottom: 16px;
            opacity: 0.3;
        }
        
        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .stat-card {
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }
        
        .stat-card .stat-value {
            font-size: 32px;
            font-weight: 800;
            color: #FFC700;
            margin: 8px 0;
        }
        
        .stat-card .stat-label {
            color: #A1A1A1;
            font-size: 14px;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 10px 0;
            }
            
            .header {
                padding: 20px 16px;
                margin-bottom: 20px;
            }
            
            .header h1 {
                font-size: 24px;
            }
            
            .header p {
                font-size: 14px;
            }
            
            .stats-summary {
                grid-template-columns: 1fr;
                gap: 12px;
                margin-bottom: 20px;
            }
            
            .stat-card {
                padding: 16px;
            }
            
            .stat-value {
                font-size: 28px;
            }
            
            .stat-label {
                font-size: 13px;
            }
            
            /* Se√ß√£o de Confirma√ß√£o R√°pida - Mobile */
            .quick-confirm-section {
                padding: 16px !important;
                margin-bottom: 16px !important;
                border-radius: 12px !important;
            }
            
            .quick-confirm-section h2 {
                font-size: 18px !important;
                margin-bottom: 16px !important;
                flex-wrap: wrap;
            }
            
            .quick-confirm-section > div {
                display: flex !important;
                flex-direction: column !important;
                gap: 12px !important;
            }
            
            .quick-confirm-section button {
                width: 100% !important;
                padding: 14px 20px !important;
                font-size: 15px !important;
                justify-content: center !important;
            }
            
            .quick-confirm-section #cpf-search-input {
                width: 100% !important;
                padding: 14px 16px !important;
                font-size: 15px !important;
                letter-spacing: 1px !important;
                margin-bottom: 8px;
            }
            
            .quick-confirm-section > div > div {
                display: flex !important;
                flex-direction: column !important;
                gap: 8px !important;
            }
            
            .quick-confirm-section > div > div button {
                width: 100% !important;
                padding: 14px 20px !important;
                font-size: 15px !important;
            }
            
            .tabs {
                flex-wrap: wrap;
                gap: 4px;
                margin-bottom: 16px;
            }
            
            .tab-button {
                padding: 10px 16px;
                font-size: 14px;
                flex: 1;
                min-width: calc(50% - 4px);
            }
            
            .table-header,
            .table-row {
                grid-template-columns: 1fr;
                gap: 8px;
                padding: 12px;
            }
            
            .table-header {
                display: none;
            }
            
            .table-row {
                border-left: 4px solid #FFC700;
                padding-left: 12px;
            }
            
            .table-row > div::before {
                content: attr(data-label) ": ";
                font-weight: 700;
                color: #FFC700;
                display: inline-block;
                min-width: 100px;
            }
            
            .status-badge {
                display: inline-block;
