                return fieldId.toString().replace(/^field_\d+_/, '').replace(/^field_/, '').replace(/_/g, ' ') || fieldId;
            }
            
            // Se fieldId for apenas um n√∫mero (string ou n√∫mero), tentar usar como √≠ndice direto
            const fieldIdStr = fieldId.toString();
            if (/^\d+$/.test(fieldIdStr)) {
