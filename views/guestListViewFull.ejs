<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Convidados - <%= guestList.event_title || 'Evento' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0D0D0F 0%, #1C1C21 100%);
            min-height: 100vh;
            padding: 20px;
            color: #ECECEC;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px 0;
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 20px;
        }
        
        .header h1 {
            font-size: 32px;
            font-weight: 800;
            color: #FFC700;
            margin-bottom: 12px;
        }
        
        .header p {
            color: #A1A1A1;
            font-size: 16px;
        }
        
        .tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 24px;
            border-bottom: 2px solid #2C2C2F;
        }
        
        .tab-button {
            padding: 12px 24px;
            background: transparent;
            border: none;
            color: #A1A1A1;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
            position: relative;
            top: 2px;
        }
        
        .tab-button.active {
            color: #FFC700;
            border-bottom-color: #FFC700;
        }
        
        .tab-button:hover {
            color: #ECECEC;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .guests-table {
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 12px;
            overflow: hidden;
        }
        
        .table-header {
            background: #2C2C2F;
            padding: 16px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
            gap: 16px;
            font-weight: 600;
            color: #ECECEC;
        }
        
        .table-row {
            padding: 16px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
            gap: 16px;
            border-bottom: 1px solid #2C2C2F;
            align-items: center;
        }
        
        .table-row:last-child {
            border-bottom: none;
        }
        
        .table-row:hover {
            background: rgba(255, 199, 0, 0.05);
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }
        
        .status-registered {
            background: rgba(74, 144, 226, 0.2);
            color: #4A90E2;
        }
        
        .status-confirmed {
            background: rgba(255, 199, 0, 0.2);
            color: #FFC700;
        }
        
        .status-checked_in {
            background: rgba(37, 211, 102, 0.2);
            color: #25D366;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #A1A1A1;
        }
        
        .empty-state i {
            font-size: 64px;
            margin-bottom: 16px;
            opacity: 0.3;
        }
        
        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .stat-card {
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
        }
        
        .stat-card .stat-value {
            font-size: 32px;
            font-weight: 800;
            color: #FFC700;
            margin: 8px 0;
        }
        
        .stat-card .stat-label {
            color: #A1A1A1;
            font-size: 14px;
        }
        
        @media (max-width: 768px) {
            .table-header,
            .table-row {
                grid-template-columns: 1fr;
                gap: 8px;
            }
            
            .stats-summary {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-users"></i> <%= guestList.event_title || 'Lista de Convidados' %></h1>
            <p>Visualização completa para portaria</p>
        </div>
        
        <div class="stats-summary">
            <div class="stat-card">
                <div class="stat-label">Cadastrados</div>
                <div class="stat-value"><%= registeredGuests.length %></div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Não Chegou</div>
                <div class="stat-value"><%= notArrivedGuests ? notArrivedGuests.length : registeredGuests.filter(g => g.status === 'registered').length %></div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Chegou</div>
                <div class="stat-value"><%= checkedInGuests.length %></div>
            </div>
        </div>
        
        <div class="tabs">
            <button class="tab-button active" onclick="switchTab('registered')">
                <i class="fas fa-user-plus"></i> Cadastrados (<%= registeredGuests.length %>)
            </button>
            <button class="tab-button" onclick="switchTab('checked_in')">
                <i class="fas fa-check-circle"></i> Quem Chegou (<%= checkedInGuests.length %>)
            </button>
            <button class="tab-button" onclick="switchTab('not_arrived')">
                <i class="fas fa-clock"></i> Quem Não Chegou (<%= notArrivedGuests ? notArrivedGuests.length : 0 %>)
            </button>
        </div>
        
        <!-- Tab: Cadastrados (TODOS os inscritos, independente do status) -->
        <div id="tab-registered" class="tab-content active">
            <div class="guests-table">
                <div class="table-header">
                    <div>Nome Completo</div>
                    <div>Email</div>
                    <div>WhatsApp</div>
                    <div>Status</div>
                    <div>Data</div>
                </div>
                <% if (registeredGuests.length === 0) { %>
                    <div class="empty-state">
                        <i class="fas fa-user-plus"></i>
                        <p>Nenhum convidado cadastrado</p>
                    </div>
                <% } else { %>
                    <% registeredGuests.forEach(guest => { 
                        // Extrair nome, email e whatsapp (tentar também de custom_responses se necessário)
                        let displayName = guest.name || '';
                        let displayEmail = guest.email || '';
                        let displayWhatsapp = guest.whatsapp || guest.phone || '';
                        
                        // Tentar extrair de custom_responses se não tiver nos campos diretos
                        if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante') || 
                            !displayEmail || displayEmail.trim() === '' || 
                            !displayWhatsapp || displayWhatsapp.trim() === '') {
                            try {
                                const customResponses = typeof guest.custom_responses === 'string' 
                                    ? JSON.parse(guest.custom_responses) 
                                    : (guest.custom_responses || {});
                                
                                // Procurar nos formFields primeiro
                                if (typeof formFields !== 'undefined' && Array.isArray(formFields)) {
                                    formFields.forEach(field => {
                                        if (field.id && customResponses[field.id]) {
                                            const value = customResponses[field.id];
                                            const valueStr = Array.isArray(value) ? value[0] : (value || '').toString().trim();
                                            const label = (field.label || '').toLowerCase();
                                            
                                            if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante') && 
                                                (label.includes('nome') || label.includes('name'))) {
                                                displayName = valueStr;
                                            }
                                            if ((!displayWhatsapp || displayWhatsapp.trim() === '') && 
                                                (label.includes('whatsapp') || label.includes('telefone') || label.includes('phone'))) {
                                                displayWhatsapp = valueStr;
                                            }
                                            if ((!displayEmail || displayEmail.trim() === '') && 
                                                (label.includes('email') || label.includes('e-mail'))) {
                                                displayEmail = valueStr;
                                            }
                                        }
                                    });
                                }
                                
                                // Fallback: procurar por chaves nos customResponses
                                if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante') || 
                                    !displayEmail || displayEmail.trim() === '' || 
                                    !displayWhatsapp || displayWhatsapp.trim() === '') {
                                    Object.keys(customResponses).forEach(key => {
                                        const keyLower = key.toLowerCase();
                                        const value = customResponses[key];
                                        const valueStr = Array.isArray(value) ? value[0] : (value || '').toString().trim();
                                        
                                        if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante') && 
                                            (keyLower.includes('nome') || keyLower.includes('name'))) {
                                            displayName = valueStr;
                                        }
                                        if ((!displayWhatsapp || displayWhatsapp.trim() === '') && 
                                            (keyLower.includes('whatsapp') || keyLower.includes('telefone') || keyLower.includes('phone'))) {
                                            displayWhatsapp = valueStr;
                                        }
                                        if ((!displayEmail || displayEmail.trim() === '') && 
                                            (keyLower.includes('email') || keyLower.includes('e-mail'))) {
                                            displayEmail = valueStr;
                                        }
                                    });
                                }
                            } catch (e) {}
                        }
                        
                        displayName = (displayName && displayName.trim() && displayName.toLowerCase() !== 'visitante') ? displayName.trim() : 'Sem nome';
                        displayEmail = (displayEmail && displayEmail.trim()) ? displayEmail.trim() : '-';
                        displayWhatsapp = (displayWhatsapp && displayWhatsapp.trim()) ? displayWhatsapp.trim() : '-';
                        
                        // Determinar status e data
                        let statusText = 'Inscrito';
                        let statusClass = 'status-registered';
                        let dateToShow = guest.created_at;
                        
                        if (guest.status === 'checked_in') {
                            statusText = 'Chegou';
                            statusClass = 'status-checked_in';
                            dateToShow = guest.checked_in_at || guest.created_at;
                        } else if (guest.status === 'confirmed') {
                            statusText = 'Confirmado';
                            statusClass = 'status-confirmed';
                            dateToShow = guest.confirmed_at || guest.created_at;
                        }
                    %>
                        <div class="table-row">
                            <div style="font-weight: 600;"><%= displayName %></div>
                            <div><%= displayEmail %></div>
                            <div><%= displayWhatsapp %></div>
                            <div><span class="status-badge <%= statusClass %>"><%= statusText %></span></div>
                            <div style="display: flex; align-items: center; gap: 8px; flex-wrap: wrap;">
                                <span><%= dateToShow ? new Date(dateToShow).toLocaleString('pt-BR') : '-' %></span>
                                <button onclick="viewGuestDetailsPortaria(<%= guest.id %>)" 
                                        style="padding: 6px 12px; background: linear-gradient(135deg, #4A90E2, #357ABD); border: none; border-radius: 6px; color: #fff; font-weight: 600; cursor: pointer; font-size: 12px; white-space: nowrap;">
                                    <i class="fas fa-eye"></i> Ver Detalhes
                                </button>
                                <% if (guest.status !== 'checked_in') { %>
                                    <button onclick="confirmarChegada(<%= guest.id %>, '<%= (displayName || '').replace(/'/g, "\\'") %>')" 
                                            style="padding: 6px 12px; background: linear-gradient(135deg, #43e97b, #38f9d7); border: none; border-radius: 6px; color: #000; font-weight: 600; cursor: pointer; font-size: 12px; white-space: nowrap;">
                                        <i class="fas fa-check"></i> Confirmar Chegada
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
        
        <!-- Tab: Conferidos -->
        <div id="tab-checked_in" class="tab-content">
            <div class="guests-table">
                <div class="table-header">
                    <div>Nome Completo</div>
                    <div>Email</div>
                    <div>WhatsApp</div>
                    <div>Status</div>
                    <div>Conferido em</div>
                </div>
                <% if (checkedInGuests.length === 0) { %>
                    <div class="empty-state">
                        <i class="fas fa-check-double"></i>
                        <p>Nenhum convidado conferido</p>
                    </div>
                <% } else { %>
                    <% checkedInGuests.forEach(guest => {
                        // Extrair nome, email e whatsapp corretamente
                        let displayName = guest.name || '';
                        let displayEmail = guest.email || '';
                        let displayWhatsapp = guest.whatsapp || guest.phone || '';
                        
                        if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante') || 
                            !displayEmail || displayEmail.trim() === '' || 
                            !displayWhatsapp || displayWhatsapp.trim() === '') {
                            try {
                                const customResponses = typeof guest.custom_responses === 'string' 
                                    ? JSON.parse(guest.custom_responses) 
                                    : (guest.custom_responses || {});
                                
                                if (typeof formFields !== 'undefined' && Array.isArray(formFields)) {
                                    formFields.forEach(field => {
                                        if (field.id && customResponses[field.id]) {
                                            const value = customResponses[field.id];
                                            const valueStr = Array.isArray(value) ? value[0] : (value || '').toString().trim();
                                            const label = (field.label || '').toLowerCase();
                                            
                                            if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante') && 
                                                (label.includes('nome') || label.includes('name'))) {
                                                displayName = valueStr;
                                            }
                                            if ((!displayWhatsapp || displayWhatsapp.trim() === '') && 
                                                (label.includes('whatsapp') || label.includes('telefone') || label.includes('phone'))) {
                                                displayWhatsapp = valueStr;
                                            }
                                            if ((!displayEmail || displayEmail.trim() === '') && 
                                                (label.includes('email') || label.includes('e-mail'))) {
                                                displayEmail = valueStr;
                                            }
                                        }
                                    });
                                }
                                
                                // Fallback
                                if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante')) {
                                    Object.keys(customResponses).forEach(key => {
                                        const keyLower = key.toLowerCase();
                                        const value = customResponses[key];
                                        const valueStr = Array.isArray(value) ? value[0] : (value || '').toString().trim();
                                        if ((!displayName || displayName.trim() === '' || displayName.toLowerCase() === 'visitante') && 
                                            (keyLower.includes('nome') || keyLower.includes('name'))) {
                                            displayName = valueStr;
                                        }
                                    });
                                }
                            } catch (e) {}
                        }
                        
                        displayName = (displayName && displayName.trim() && displayName.toLowerCase() !== 'visitante') ? displayName.trim() : 'Sem nome';
                        displayEmail = (displayEmail && displayEmail.trim()) ? displayEmail.trim() : '-';
                        displayWhatsapp = (displayWhatsapp && displayWhatsapp.trim()) ? displayWhatsapp.trim() : '-';
                    %>
                        <div class="table-row">
                            <div style="font-weight: 600;"><%= displayName %></div>
                            <div><%= displayEmail %></div>
                            <div><%= displayWhatsapp %></div>
                            <div><span class="status-badge status-checked_in">Chegou</span></div>
                            <div style="display: flex; align-items: center; gap: 8px; flex-wrap: wrap;">
                                <span><%= guest.checked_in_at ? new Date(guest.checked_in_at).toLocaleString('pt-BR') : '-' %></span>
                                <button onclick="viewGuestDetailsPortaria(<%= guest.id %>)" 
                                        style="padding: 6px 12px; background: linear-gradient(135deg, #4A90E2, #357ABD); border: none; border-radius: 6px; color: #fff; font-weight: 600; cursor: pointer; font-size: 12px; white-space: nowrap;">
                                    <i class="fas fa-eye"></i> Ver Detalhes
                                </button>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>
    
    <script>
        // Form fields para mapear labels
        const formFields = <%= JSON.stringify(typeof formFields !== 'undefined' ? formFields : []) %>;
        const profileItemId = <%= profileItemId %>;
        const token = '<%= token %>';
        
        // Dados de todos os convidados para o modal
        const allGuests = <%= JSON.stringify([...registeredGuests, ...(checkedInGuests || []), ...(notArrivedGuests || [])]) %>;
        
        // Função para confirmar chegada (portaria) - Definir como global
        window.confirmarChegada = async function(guestId, guestName) {
            if (!confirm(`Confirmar chegada de ${guestName || 'este convidado'}?`)) return;
            
            // Encontrar o botão que foi clicado
            const buttons = document.querySelectorAll(`button[onclick*="confirmarChegada(${guestId}"]`);
            const button = buttons.length > 0 ? buttons[0] : null;
            if (button) {
                button.disabled = true;
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Confirmando...';
                
                try {
                    const response = await fetch(`/guest-list/view-full/${token}/checkin/${guestId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (!response.ok) {
                        const errorData = await response.json().catch(() => ({ message: 'Erro desconhecido' }));
                        throw new Error(errorData.message || 'Erro ao confirmar chegada');
                    }
                    
                    const result = await response.json();
                    alert('✅ Chegada confirmada com sucesso!');
                    location.reload();
                } catch (error) {
                    console.error('Erro ao confirmar chegada:', error);
                    alert('❌ Erro ao confirmar chegada: ' + error.message);
                    button.disabled = false;
                    button.innerHTML = originalHTML;
                }
            } else {
                // Fallback se não encontrar o botão
                try {
                    const response = await fetch(`/guest-list/view-full/${token}/checkin/${guestId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (!response.ok) {
                        const errorData = await response.json().catch(() => ({ message: 'Erro desconhecido' }));
                        throw new Error(errorData.message || 'Erro ao confirmar chegada');
                    }
                    
                    const result = await response.json();
                    alert('✅ Chegada confirmada com sucesso!');
                    location.reload();
                } catch (error) {
                    console.error('Erro ao confirmar chegada:', error);
                    alert('❌ Erro ao confirmar chegada: ' + error.message);
                }
            }
        };
        
        // Função para visualizar detalhes do convidado (portaria) - COM PERGUNTAS E RESPOSTAS
        window.viewGuestDetailsPortaria = function(guestId) {
            const guest = allGuests.find(g => g.id === guestId || g.id === parseInt(guestId));
            if (!guest) {
                alert('Convidado não encontrado');
                return;
            }
            
            // Criar modal
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.9);
                z-index: 10000;
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 20px;
                overflow-y: auto;
            `;
            modal.onclick = function(e) {
                if (e.target === modal) modal.remove();
            };
            
            const modalContent = document.createElement('div');
            modalContent.style.cssText = `
                background: #1C1C21;
                border: 2px solid #FFC700;
                border-radius: 20px;
                padding: 32px;
                max-width: 700px;
                width: 100%;
                max-height: 90vh;
                overflow-y: auto;
                color: #ECECEC;
                position: relative;
                box-shadow: 0 20px 60px rgba(0,0,0,0.8);
            `;
            modalContent.onclick = function(e) { e.stopPropagation(); };
            
            // Extrair nome, email e whatsapp
            let displayName = guest.name || '';
            let displayEmail = guest.email || '';
            let displayWhatsapp = guest.whatsapp || guest.phone || '';
            
            // Tentar extrair de custom_responses se necessário
            try {
                const customResponses = typeof guest.custom_responses === 'string' 
                    ? JSON.parse(guest.custom_responses) 
                    : (guest.custom_responses || {});
                
                if (formFields && Array.isArray(formFields)) {
                    formFields.forEach(field => {
                        if (field.id && customResponses[field.id]) {
                            const value = customResponses[field.id];
                            const valueStr = Array.isArray(value) ? value[0] : (value || '').toString().trim();
                            const label = (field.label || '').toLowerCase();
                            
                            if ((!displayName || displayName.toLowerCase() === 'visitante') && 
                                (label.includes('nome') || label.includes('name'))) {
                                displayName = valueStr;
                            }
                            if ((!displayWhatsapp || displayWhatsapp.trim() === '') && 
                                (label.includes('whatsapp') || label.includes('telefone') || label.includes('phone'))) {
                                displayWhatsapp = valueStr;
                            }
                            if ((!displayEmail || displayEmail.trim() === '') && 
                                (label.includes('email') || label.includes('e-mail'))) {
                                displayEmail = valueStr;
                            }
                        }
                    });
                }
            } catch (e) {}
            
            displayName = (displayName && displayName.trim() && displayName.toLowerCase() !== 'visitante') ? displayName.trim() : 'Sem nome';
            displayEmail = (displayEmail && displayEmail.trim()) ? displayEmail.trim() : '-';
            displayWhatsapp = (displayWhatsapp && displayWhatsapp.trim()) ? displayWhatsapp.trim() : '-';
            
            // Parsear custom_responses
            let customResponses = {};
            if (guest.custom_responses) {
                try {
                    customResponses = typeof guest.custom_responses === 'string' 
                        ? JSON.parse(guest.custom_responses) 
                        : guest.custom_responses;
                } catch (e) {
                    customResponses = {};
                }
            }
            
            // Gerar código da inscrição
            const inscricaoCode = `INS-${guest.id}-${new Date(guest.created_at).getFullYear()}${String(new Date(guest.created_at).getMonth() + 1).padStart(2, '0')}${String(new Date(guest.created_at).getDate()).padStart(2, '0')}`;
            
            // Preparar HTML dos campos do formulário COM PERGUNTAS E RESPOSTAS
            let formFieldsHTML = '';
            if (Object.keys(customResponses).length > 0 && formFields && Array.isArray(formFields)) {
                formFieldsHTML = Object.entries(customResponses).map(([key, value]) => {
                    const label = getFieldLabel(key); // Usa a função getFieldLabel para pegar a PERGUNTA
                    let displayValue = Array.isArray(value) ? value.join(', ') : (value || '');
                    
                    // Formatação especial para arrays (como checkbox, multiple_choice)
                    let formattedValue = displayValue;
                    if (Array.isArray(value) && value.length > 1) {
                        formattedValue = value.map(v => `<div style="margin-left: 16px; margin-top: 4px;">• ${String(v)}</div>`).join('');
                    }
                    
                    return `
                        <div style="margin-bottom: 16px; padding: 16px; background: rgba(255,199,0,0.1); border-radius: 12px; border-left: 4px solid #FFC700;">
                            <div style="font-weight: 700; color: #FFC700; margin-bottom: 8px; font-size: 15px;">
                                <i class="fas fa-question-circle"></i> ${label}
                            </div>
                            <div style="color: #ECECEC; font-size: 14px; line-height: 1.6; ${Array.isArray(value) && value.length > 1 ? 'padding-left: 8px;' : ''}">
                                ${formattedValue || '<span style="color: #A1A1A1; font-style: italic;">Não informado</span>'}
                            </div>
                        </div>
                    `;
                }).join('');
            } else if (Object.keys(customResponses).length > 0) {
                // Fallback se não tiver formFields
                formFieldsHTML = Object.entries(customResponses).map(([key, value]) => {
                    const label = getFieldLabel(key);
                    const displayValue = Array.isArray(value) ? value.join(', ') : (value || '');
                    return `
                        <div style="margin-bottom: 12px; padding: 12px; background: rgba(255,255,255,0.04); border-radius: 8px; border-left: 4px solid #FFC700;">
                            <strong style="color: #FFC700; display: block; margin-bottom: 6px;">${label}:</strong> 
                            <span style="color: #ECECEC;">${displayValue}</span>
                        </div>
                    `;
                }).join('');
            }
            
            modalContent.innerHTML = `
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; border-bottom: 2px solid rgba(255,199,0,0.2); padding-bottom: 16px;">
                    <h2 style="margin: 0; color: #FFC700; font-size: 24px; font-weight: 700;">
                        <i class="fas fa-user-circle"></i> Detalhes da Inscrição
                    </h2>
                    <button onclick="this.closest('[style*=\\'position: fixed\\']').remove()" 
                            style="background: rgba(255,255,255,0.1); border: none; color: #ECECEC; font-size: 24px; cursor: pointer; padding: 8px; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; transition: all 0.3s;"
                            onmouseover="this.style.background='rgba(255,199,0,0.2)'; this.style.color='#FFC700';"
                            onmouseout="this.style.background='rgba(255,255,255,0.1)'; this.style.color='#ECECEC';">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div style="margin-bottom: 24px; padding: 16px; background: rgba(255,199,0,0.15); border-radius: 12px; border: 1px solid rgba(255,199,0,0.3);">
                    <div style="font-weight: 700; color: #FFC700; margin-bottom: 8px; font-size: 14px;">
                        <i class="fas fa-qrcode"></i> Código da Inscrição
                    </div>
                    <div style="color: #ECECEC; font-size: 18px; font-family: monospace; font-weight: 600;">
                        ${inscricaoCode}
                    </div>
                </div>
                
                <div style="margin-bottom: 24px; padding: 20px; background: rgba(255,199,0,0.1); border-radius: 12px; border-left: 4px solid #FFC700;">
                    <h3 style="margin: 0 0 16px 0; color: #FFC700; font-size: 18px; font-weight: 700;">
                        <i class="fas fa-info-circle"></i> Informações Básicas
                    </h3>
                    <div style="display: flex; flex-direction: column; gap: 12px;">
                        <div>
                            <strong style="color: #FFC700; display: block; margin-bottom: 4px;">Nome:</strong>
                            <span style="color: #ECECEC; font-size: 16px;">${displayName}</span>
                        </div>
                        <div>
                            <strong style="color: #FFC700; display: block; margin-bottom: 4px;">Email:</strong>
                            <span style="color: #ECECEC;">${displayEmail}</span>
                        </div>
                        <div>
                            <strong style="color: #FFC700; display: block; margin-bottom: 4px;">WhatsApp:</strong>
                            <span style="color: #25D366; font-weight: 600;">${displayWhatsapp}</span>
                        </div>
                    </div>
                </div>
                
                ${Object.keys(customResponses).length > 0 ? `
                <div style="margin-bottom: 24px;">
                    <h3 style="margin: 0 0 16px 0; color: #FFC700; font-size: 18px; font-weight: 700;">
                        <i class="fas fa-list-alt"></i> Informações do Formulário
                    </h3>
                    <div style="display: flex; flex-direction: column; gap: 12px;">
                        ${formFieldsHTML}
                    </div>
                </div>
                ` : ''}
                
                <div style="margin-bottom: 24px; padding: 16px; background: rgba(76,175,80,0.1); border-radius: 12px; border-left: 4px solid #4CAF50;">
                    <h3 style="margin: 0 0 12px 0; color: #4CAF50; font-size: 16px; font-weight: 700;">
                        <i class="fas fa-calendar-check"></i> Status e Datas
                    </h3>
                    <div style="display: flex; flex-direction: column; gap: 8px; color: #ECECEC; font-size: 14px;">
                        <div>
                            <strong>Status:</strong> 
                            <span style="color: ${guest.status === 'checked_in' ? '#4CAF50' : guest.status === 'confirmed' ? '#FFC700' : '#A1A1A1'}; font-weight: 600;">
                                ${guest.status === 'checked_in' ? 'Chegou' : guest.status === 'confirmed' ? 'Confirmado' : 'Inscrito'}
                            </span>
                        </div>
                        <div><strong>Inscrito em:</strong> ${guest.created_at ? new Date(guest.created_at).toLocaleString('pt-BR') : '-'}</div>
                        ${guest.confirmed_at ? `<div><strong>Confirmado em:</strong> ${new Date(guest.confirmed_at).toLocaleString('pt-BR')}</div>` : ''}
                        ${guest.checked_in_at ? `<div><strong>Conferido em:</strong> ${new Date(guest.checked_in_at).toLocaleString('pt-BR')}</div>` : ''}
                    </div>
                </div>
                
                <div style="display: flex; gap: 12px; justify-content: flex-end; margin-top: 24px; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 16px;">
                    <button onclick="this.closest('[style*=\\'position: fixed\\']').remove()" 
                            style="padding: 12px 24px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); border-radius: 8px; color: #ECECEC; font-weight: 600; cursor: pointer; transition: all 0.3s;"
                            onmouseover="this.style.background='rgba(255,199,0,0.2)'; this.style.borderColor='#FFC700'; this.style.color='#FFC700';"
                            onmouseout="this.style.background='rgba(255,255,255,0.1)'; this.style.borderColor='rgba(255,255,255,0.2)'; this.style.color='#ECECEC';">
                        Fechar
                    </button>
                </div>
            `;
            
            modal.appendChild(modalContent);
            document.body.appendChild(modal);
        };
        
        // Função para obter label do campo pelo ID
        function getFieldLabel(fieldId) {
            if (!formFields || !Array.isArray(formFields)) return fieldId;
            
            // Tentar encontrar pelo ID exato
            let field = formFields.find(f => f.id === fieldId || (f.id && f.id.toString() === fieldId.toString()));
            if (field && field.label) return field.label;
            
            // Tentar encontrar pelo ID sem prefixo
            const fieldIdClean = fieldId.toString().replace(/^field_/, '').replace(/_/g, '');
            field = formFields.find(f => {
                const fId = (f.id || '').toString().replace(/^field_/, '').replace(/_/g, '');
                return fId === fieldIdClean || fId.includes(fieldIdClean) || fieldIdClean.includes(fId);
            });
            if (field && field.label) return field.label;
            
            // Tentar encontrar pelo índice (se fieldId for field_0, field_1, etc)
            const match = fieldId.toString().match(/field_(\d+)/);
            if (match && match[1]) {
                const index = parseInt(match[1]);
                if (formFields[index] && formFields[index].label) {
                    return formFields[index].label;
                }
            }
            
            // Se não encontrou, retornar o ID formatado (remover "field_" e números)
            return fieldId.toString().replace(/^field_\d+_/, '').replace(/^field_/, '').replace(/_/g, ' ');
        }
        
        function switchTab(tabName) {
            // Remover active de todas as tabs
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Ativar tab selecionada
            event.target.classList.add('active');
            const tabId = tabName === 'checked_in' ? 'checked_in' : tabName === 'not_arrived' ? 'not_arrived' : tabName;
            document.getElementById(`tab-${tabId}`).classList.add('active');
        }
    </script>
