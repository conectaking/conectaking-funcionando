                                 row.style.opacity !== '0' &&
                                 window.getComputedStyle(row).display !== 'none';
                
                if (isVisible) {
                    visibleIndex++;
                    const nameCell = row.querySelector('[data-label="Nome Completo"]');
                    if (nameCell) {
                        // Extrair o nome sem o número - método simples e robusto
                        // Pegar todo o textContent e remover qualquer número no início
                        let fullText = nameCell.textContent || nameCell.innerText || '';
                        // Remover número no início (formato: "1. Nome" ou "10. Nome")
                        let nameWithoutNumber = fullText.replace(/^\d+\.\s*/, '').trim();
                        
                        // Se por algum motivo não conseguiu extrair, usar o texto completo
                        if (!nameWithoutNumber || nameWithoutNumber === '') {
                            nameWithoutNumber = fullText.trim();
                        }
                        
                        // Limpar célula completamente
                        nameCell.innerHTML = '';
                        
                        // Adicionar novo número
                        const numberSpan = document.createElement('span');
                        numberSpan.style.color = '<%= (typeof guestList !== "undefined" && guestList && guestList.primary_color) ? guestList.primary_color : "#FFC700" %>';
                        numberSpan.style.marginRight = '8px';
                        numberSpan.style.fontWeight = '700';
                        numberSpan.textContent = visibleIndex + '.';
                        
                        // Adicionar número + nome
                        nameCell.appendChild(numberSpan);
                        nameCell.appendChild(document.createTextNode(nameWithoutNumber));
                    }
                }
            });
            
            console.log(`✅ Números sequenciais atualizados: ${visibleIndex} linhas visíveis numeradas`);
        }
        
        // Função para resetar busca
        function resetFilters() {
            const searchInput = document.getElementById('cpf-search-input');
            if (searchInput) {
                searchInput.value = '';
            }
            
            // Mostrar todos os convidados na aba ativa
            const activeTab = document.querySelector('.tab-content.active');
            if (activeTab) {
                const rows = activeTab.querySelectorAll('.table-row');
                rows.forEach(row => {
                    row.style.display = '';
                    row.style.visibility = 'visible';
                    row.style.opacity = '1';
                });
            }
            
            filterGuests();
            console.log('✅ Busca resetada');
        }
        
        // Tornar funções globais
        window.filterGuests = filterGuests;
        window.sortGuests = sortGuests;
        window.resetFilters = resetFilters;
        window.updateRowNumbers = updateRowNumbers;
        
        // Aplicar filtro inicial (mostrar todos)
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                // Debug: verificar quantas linhas existem em cada aba
                const registeredTab = document.getElementById('tab-registered');
                const checkedInTab = document.getElementById('tab-checked_in');
                const notArrivedTab = document.getElementById('tab-not_arrived');
                
                console.log('📊 [INIT] Verificando abas...');
                
                if (registeredTab) {
                    const registeredRows = registeredTab.querySelectorAll('.table-row');
                    console.log('📊 [INIT] Aba Cadastrados:', registeredRows.length, 'linhas');
                    registeredRows.forEach((row, idx) => {
                        console.log(`  - Linha ${idx + 1}:`, row.getAttribute('data-status'), row.querySelector('[data-label="Nome Completo"]')?.textContent);
                    });
                } else {
                    console.error('❌ [INIT] Aba Cadastrados não encontrada!');
                }
                
                if (checkedInTab) {
                    const checkedInRows = checkedInTab.querySelectorAll('.table-row');
                    console.log('📊 [INIT] Aba Quem Chegou:', checkedInRows.length, 'linhas');
                    checkedInRows.forEach((row, idx) => {
                        console.log(`  - Linha ${idx + 1}:`, row.getAttribute('data-status'), row.querySelector('[data-label="Nome Completo"]')?.textContent);
                    });
                } else {
                    console.error('❌ [INIT] Aba Quem Chegou não encontrada!');
                }
                
                if (notArrivedTab) {
                    const notArrivedRows = notArrivedTab.querySelectorAll('.table-row');
                    console.log('📊 [INIT] Aba Quem Não Chegou:', notArrivedRows.length, 'linhas');
                    notArrivedRows.forEach((row, idx) => {
                        console.log(`  - Linha ${idx + 1}:`, row.getAttribute('data-status'), row.querySelector('[data-label="Nome Completo"]')?.textContent);
                    });
                } else {
                    console.error('❌ [INIT] Aba Quem Não Chegou não encontrada!');
                }
                
                // Garantir que a aba registered está ativa e visível
                if (registeredTab) {
                    registeredTab.classList.add('active');
                    registeredTab.style.display = 'block';
                }
                
                // Garantir que todas as linhas da aba ativa sejam visíveis
                const activeTab = document.querySelector('.tab-content.active');
                if (activeTab) {
                    const rows = activeTab.querySelectorAll('.table-row');
                    rows.forEach(row => {
                        row.style.display = '';
                        row.style.visibility = 'visible';
                        row.style.opacity = '1';
                    });
                    console.log(`✅ [INIT] ${rows.length} linhas tornadas visíveis na aba ativa`);
                }
                
                sortGuests();
                filterGuests(); // Aplicar busca inicial (mostrar todos se não houver busca)
                updateRowNumbers(); // Garantir numeração correta na inicialização
            }, 100);
        });
        
        // Função para inicializar event listeners (pode ser chamada imediatamente ou no DOMContentLoaded)
        function initEventListeners() {
            console.log('🔧 Inicializando event listeners...');
            
            // Adicionar event listener ao botão QR Code
            const qrBtn = document.getElementById('qr-scanner-btn');
            if (qrBtn) {
                console.log('✅ Botão QR Code encontrado');
                qrBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('🔘 Botão QR Code clicado');
                    if (typeof window.openQRScanner === 'function') {
                        window.openQRScanner();
                    } else {
                        console.error('❌ openQRScanner não está definida');
                        alert('Erro: Scanner QR Code não está disponível. Recarregue a página.');
                    }
                }, { once: false });
                
                // Navegação por teclado (acessibilidade)
                qrBtn.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        qrBtn.click();
                    }
                });
                qrBtn.setAttribute('tabindex', '0');
                qrBtn.setAttribute('role', 'button');
                qrBtn.setAttribute('aria-label', 'Abrir scanner de QR Code');
            } else {
                console.error('❌ Botão QR Code não encontrado');
            }
            
            // Adicionar event listener ao botão de busca
            const cpfBtn = document.getElementById('cpf-search-btn');
            if (cpfBtn) {
                cpfBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    if (typeof window.filterGuestList === 'function') {
                        window.filterGuestList();
                    }
                }, { once: false });

                cpfBtn.setAttribute('tabindex', '0');
                cpfBtn.setAttribute('role', 'button');
                cpfBtn.setAttribute('aria-label', 'Filtrar lista por CPF, Email ou Nome');
            }

            // Filtrar em tempo real enquanto digita
            const cpfInput = document.getElementById('cpf-search-input');
            if (cpfInput) {
                // Filtrar em tempo real
                cpfInput.addEventListener('input', function() {
                    if (typeof window.filterGuestList === 'function') {
                        window.filterGuestList();
                    }
                });
                
                // Permitir buscar ao pressionar Enter
                cpfInput.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        if (typeof window.filterGuestList === 'function') {
                            window.filterGuestList();
                        }
                    }
                });

                cpfInput.setAttribute('aria-label', 'Digite CPF, Email ou Nome para filtrar a lista');
            }
            
            console.log('✅ Event listeners inicializados');
        }
        
        // Inicializar imediatamente se o DOM já estiver pronto, senão aguardar DOMContentLoaded
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initEventListeners);
        } else {
            // DOM já está pronto
            initEventListeners();
        }
        
        // Fallback: tentar novamente após um pequeno delay (para mobile)
        setTimeout(function() {
            const qrBtn = document.getElementById('qr-scanner-btn');
            const cpfBtn = document.getElementById('cpf-search-btn');
            if (qrBtn && !qrBtn.onclick) {
                console.log('🔄 Reinicializando event listeners (fallback mobile)...');
                initEventListeners();
            }
        }, 500);
        
        // Validação removida - agora aceita CPF, Email ou Nome
        
    </script>
</body>
