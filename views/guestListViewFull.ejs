                                displayName = valueStr;
                            }
                            if ((!displayWhatsapp || displayWhatsapp.trim() === '') && 
                                (label.includes('whatsapp') || label.includes('telefone') || label.includes('phone'))) {
                                displayWhatsapp = valueStr;
                            }
                            if ((!displayEmail || displayEmail.trim() === '') && 
                                (label.includes('email') || label.includes('e-mail'))) {
                                displayEmail = valueStr;
                            }
                        }
                    });
                }
            } catch (e) {}
            
            displayName = (displayName && displayName.trim() && displayName.toLowerCase() !== 'visitante') ? displayName.trim() : 'Sem nome';
            displayEmail = (displayEmail && displayEmail.trim()) ? displayEmail.trim() : '-';
            displayWhatsapp = (displayWhatsapp && displayWhatsapp.trim()) ? displayWhatsapp.trim() : '-';
            
            // Parsear custom_responses
            let customResponses = {};
            if (guest.custom_responses) {
                try {
                    customResponses = typeof guest.custom_responses === 'string' 
                        ? JSON.parse(guest.custom_responses) 
                        : guest.custom_responses;
                } catch (e) {
                    customResponses = {};
                }
            }
            
            // Gerar código da inscrição
            const inscricaoCode = `King-${guest.id}-${new Date(guest.created_at).getFullYear()}${String(new Date(guest.created_at).getMonth() + 1).padStart(2, '0')}${String(new Date(guest.created_at).getDate()).padStart(2, '0')}`;
            
            // Preparar HTML dos campos do formulário COM PERGUNTAS E RESPOSTAS
            let formFieldsHTML = '';
            if (Object.keys(customResponses).length > 0 && formFields && Array.isArray(formFields) && formFields.length > 0) {
                formFieldsHTML = Object.entries(customResponses).map(([key, value]) => {
                    // Tentar obter o label do campo
                    let label = getFieldLabel(key);
                    
                    // Se o label ainda for igual à chave (não encontrou), tentar mais uma vez
                    if (label === key || label === key.toString()) {
                        // Tentar usar a chave como índice numérico direto
                        const numKey = parseInt(key);
                        if (!isNaN(numKey) && numKey >= 0 && numKey < formFields.length) {
                            label = formFields[numKey].label || formFields[numKey].question || label;
                        }
                    }
                    
                    let displayValue = Array.isArray(value) ? value.join(', ') : (value || '');
                    
                    // Formatação especial para arrays (como checkbox, multiple_choice)
                    let formattedValue = displayValue;
                    if (Array.isArray(value) && value.length > 1) {
                        formattedValue = value.map(v => `<div style="margin-left: 16px; margin-top: 4px;">• ${String(v)}</div>`).join('');
                    }
                    
                    return `
                        <div style="margin-bottom: 16px; padding: 16px; background: rgba(255,199,0,0.1); border-radius: 12px; border-left: 4px solid #FFC700;">
                            <div style="font-weight: 700; color: #FFC700; margin-bottom: 8px; font-size: 15px;">
                                <i class="fas fa-question-circle"></i> ${label}
                            </div>
                            <div style="color: #ECECEC; font-size: 14px; line-height: 1.6; ${Array.isArray(value) && value.length > 1 ? 'padding-left: 8px;' : ''}">
                                ${formattedValue || '<span style="color: #A1A1A1; font-style: italic;">Não informado</span>'}
                            </div>
                        </div>
                    `;
                }).join('');
            } else if (Object.keys(customResponses).length > 0) {
                // Fallback se não tiver formFields
                formFieldsHTML = Object.entries(customResponses).map(([key, value]) => {
                    let label = getFieldLabel(key);
                    const displayValue = Array.isArray(value) ? value.join(', ') : (value || '');
                    return `
                        <div style="margin-bottom: 12px; padding: 12px; background: rgba(255,255,255,0.04); border-radius: 8px; border-left: 4px solid #FFC700;">
                            <strong style="color: #FFC700; display: block; margin-bottom: 6px;">${label}:</strong> 
                            <span style="color: #ECECEC;">${displayValue}</span>
                        </div>
                    `;
                }).join('');
            }
            
            modalContent.innerHTML = `
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; border-bottom: 2px solid rgba(255,199,0,0.2); padding-bottom: 16px;">
                    <h2 style="margin: 0; color: #FFC700; font-size: 24px; font-weight: 700;">
                        <i class="fas fa-user-circle"></i> Detalhes da Inscrição
                    </h2>
                    <button onclick="this.closest('[style*=\\'position: fixed\\']').remove()" 
                            style="background: rgba(255,255,255,0.1); border: none; color: #ECECEC; font-size: 24px; cursor: pointer; padding: 8px; width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; transition: all 0.3s;"
                            onmouseover="this.style.background='rgba(255,199,0,0.2)'; this.style.color='#FFC700';"
                            onmouseout="this.style.background='rgba(255,255,255,0.1)'; this.style.color='#ECECEC';">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div style="margin-bottom: 24px; padding: 16px; background: rgba(255,199,0,0.15); border-radius: 12px; border: 1px solid rgba(255,199,0,0.3);">
                    <div style="font-weight: 700; color: #FFC700; margin-bottom: 8px; font-size: 14px;">
                        <i class="fas fa-qrcode"></i> Código da Inscrição
                    </div>
                    <div style="color: #ECECEC; font-size: 18px; font-family: monospace; font-weight: 600;">
                        ${inscricaoCode}
                    </div>
                </div>
                
                <div style="margin-bottom: 24px; padding: 20px; background: rgba(255,199,0,0.1); border-radius: 12px; border-left: 4px solid #FFC700;">
                    <h3 style="margin: 0 0 16px 0; color: #FFC700; font-size: 18px; font-weight: 700;">
                        <i class="fas fa-info-circle"></i> Informações Básicas
                    </h3>
                    <div style="display: flex; flex-direction: column; gap: 12px;">
                        <div>
                            <strong style="color: #FFC700; display: block; margin-bottom: 4px;">Nome:</strong>
                            <span style="color: #ECECEC; font-size: 16px;">${displayName}</span>
                        </div>
                        <div>
                            <strong style="color: #FFC700; display: block; margin-bottom: 4px;">Email:</strong>
                            <span style="color: #ECECEC;">${displayEmail}</span>
                        </div>
                        <div>
                            <strong style="color: #FFC700; display: block; margin-bottom: 4px;">WhatsApp:</strong>
                            <span style="color: #25D366; font-weight: 600;">${displayWhatsapp}</span>
                        </div>
                        <div>
                            <strong style="color: #FFC700; display: block; margin-bottom: 4px;">CPF:</strong>
                            <span style="color: #ECECEC;">${displayCPF}</span>
                        </div>
                    </div>
                </div>
                
                ${Object.keys(customResponses).length > 0 ? `
                <div style="margin-bottom: 24px;">
                    <h3 style="margin: 0 0 16px 0; color: #FFC700; font-size: 18px; font-weight: 700;">
                        <i class="fas fa-list-alt"></i> Informações do Formulário
                    </h3>
                    <div style="display: flex; flex-direction: column; gap: 12px;">
                        ${formFieldsHTML}
                    </div>
                </div>
                ` : ''}
                
                <div style="margin-bottom: 24px; padding: 16px; background: rgba(76,175,80,0.1); border-radius: 12px; border-left: 4px solid #4CAF50;">
                    <h3 style="margin: 0 0 12px 0; color: #4CAF50; font-size: 16px; font-weight: 700;">
                        <i class="fas fa-calendar-check"></i> Status e Datas
                    </h3>
                    <div style="display: flex; flex-direction: column; gap: 8px; color: #ECECEC; font-size: 14px;">
                        <div>
                            <strong>Status:</strong> 
                            <span style="color: ${guest.status === 'checked_in' ? '#4CAF50' : guest.status === 'confirmed' ? '#FFC700' : '#A1A1A1'}; font-weight: 600;">
                                ${guest.status === 'checked_in' ? 'Chegou' : guest.status === 'confirmed' ? 'Confirmado' : 'Inscrito'}
                            </span>
                        </div>
                        <div><strong>Inscrito em:</strong> ${guest.created_at ? new Date(guest.created_at).toLocaleString('pt-BR') : '-'}</div>
                        ${guest.confirmed_at ? `<div><strong>Confirmado em:</strong> ${new Date(guest.confirmed_at).toLocaleString('pt-BR')}</div>` : ''}
                        ${guest.checked_in_at ? `<div><strong>Conferido em:</strong> ${new Date(guest.checked_in_at).toLocaleString('pt-BR')}</div>` : ''}
                    </div>
                </div>
                
                <div style="display: flex; gap: 12px; justify-content: flex-end; margin-top: 24px; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 16px;">
                    <button onclick="this.closest('[style*=\\'position: fixed\\']').remove()" 
                            style="padding: 12px 24px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); border-radius: 8px; color: #ECECEC; font-weight: 600; cursor: pointer; transition: all 0.3s;"
                            onmouseover="this.style.background='rgba(255,199,0,0.2)'; this.style.borderColor='#FFC700'; this.style.color='#FFC700';"
                            onmouseout="this.style.background='rgba(255,255,255,0.1)'; this.style.borderColor='rgba(255,255,255,0.2)'; this.style.color='#ECECEC';">
                        Fechar
                    </button>
                </div>
            `;
            
            modal.appendChild(modalContent);
            document.body.appendChild(modal);
        };
        
        // Função para obter label do campo pelo ID
        function getFieldLabel(fieldId) {
            if (!formFields || !Array.isArray(formFields)) {
                // Se não tiver formFields, tentar formatar o fieldId de forma mais amigável
                return fieldId.toString().replace(/^field_\d+_/, '').replace(/^field_/, '').replace(/_/g, ' ') || fieldId;
            }
            
            // Se fieldId for apenas um número (string ou número), tentar usar como índice direto
            const fieldIdStr = fieldId.toString();
            if (/^\d+$/.test(fieldIdStr)) {
                const index = parseInt(fieldIdStr);
                if (index >= 0 && index < formFields.length && formFields[index] && formFields[index].label) {
                    return formFields[index].label;
                }
            }
            
            // Tentar encontrar pelo ID exato
            let field = formFields.find(f => {
                if (!f.id) return false;
                return f.id === fieldId || 
                       f.id.toString() === fieldIdStr || 
                       f.id.toString() === fieldIdStr.toString();
            });
            if (field && field.label) return field.label;
            
            // Tentar encontrar pelo ID sem prefixo
            const fieldIdClean = fieldIdStr.replace(/^field_/, '').replace(/_/g, '');
            field = formFields.find(f => {
                if (!f.id) return false;
                const fId = f.id.toString().replace(/^field_/, '').replace(/_/g, '');
                return fId === fieldIdClean || fId.includes(fieldIdClean) || fieldIdClean.includes(fId);
            });
            if (field && field.label) return field.label;
            
            // Tentar encontrar pelo índice (se fieldId for field_0, field_1, etc)
            const match = fieldIdStr.match(/field_(\d+)/);
            if (match && match[1]) {
                const index = parseInt(match[1]);
                if (index >= 0 && index < formFields.length && formFields[index] && formFields[index].label) {
                    return formFields[index].label;
                }
            }
            
            // Tentar encontrar pelo índice se fieldId começar com número após "field_"
            const match2 = fieldIdStr.match(/^(\d+)/);
            if (match2 && match2[1]) {
                const index = parseInt(match2[1]);
                if (index >= 0 && index < formFields.length && formFields[index] && formFields[index].label) {
                    return formFields[index].label;
                }
            }
            
            // Se não encontrou, retornar o ID formatado (remover "field_" e números)
            const formatted = fieldIdStr.replace(/^field_\d+_/, '').replace(/^field_/, '').replace(/_/g, ' ');
            return formatted || fieldIdStr;
        }
        
        function switchTab(tabName, eventElement) {
            // Remover active de todas as tabs
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Ativar tab selecionada
            const targetElement = (eventElement && eventElement.target) || (window.event && window.event.target) || null;
            if (targetElement) {
                targetElement.classList.add('active');
            }
            const tabId = tabName === 'checked_in' ? 'checked_in' : tabName === 'not_arrived' ? 'not_arrived' : tabName;
            const tabElement = document.getElementById(`tab-${tabId}`);
            if (tabElement) {
                tabElement.classList.add('active');
            }
        }
        
        // Tornar switchTab global para uso em onclick
        window.switchTab = switchTab;
        
        // Função para inicializar event listeners (pode ser chamada imediatamente ou no DOMContentLoaded)
        function initEventListeners() {
            console.log('🔧 Inicializando event listeners...');
            
            // Adicionar event listener ao botão QR Code
            const qrBtn = document.getElementById('qr-scanner-btn');
            if (qrBtn) {
                console.log('✅ Botão QR Code encontrado');
                qrBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('🔘 Botão QR Code clicado');
                    if (typeof window.openQRScanner === 'function') {
                        window.openQRScanner();
                    } else {
                        console.error('❌ openQRScanner não está definida');
                        alert('Erro: Scanner QR Code não está disponível. Recarregue a página.');
                    }
                }, { once: false });
                
                // Navegação por teclado (acessibilidade)
                qrBtn.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        qrBtn.click();
                    }
                });
                qrBtn.setAttribute('tabindex', '0');
                qrBtn.setAttribute('role', 'button');
                qrBtn.setAttribute('aria-label', 'Abrir scanner de QR Code');
            } else {
                console.error('❌ Botão QR Code não encontrado');
            }
            
            // Adicionar event listener ao botão de busca
            const cpfBtn = document.getElementById('cpf-search-btn');
            if (cpfBtn) {
                cpfBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    if (typeof window.filterGuestList === 'function') {
                        window.filterGuestList();
                    }
                }, { once: false });

                cpfBtn.setAttribute('tabindex', '0');
                cpfBtn.setAttribute('role', 'button');
                cpfBtn.setAttribute('aria-label', 'Filtrar lista por CPF, Email ou Nome');
            }

            // Filtrar em tempo real enquanto digita
            const cpfInput = document.getElementById('cpf-search-input');
            if (cpfInput) {
                // Filtrar em tempo real
                cpfInput.addEventListener('input', function() {
                    if (typeof window.filterGuestList === 'function') {
                        window.filterGuestList();
                    }
                });
                
                // Permitir buscar ao pressionar Enter
                cpfInput.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        if (typeof window.filterGuestList === 'function') {
                            window.filterGuestList();
                        }
                    }
                });

                cpfInput.setAttribute('aria-label', 'Digite CPF, Email ou Nome para filtrar a lista');
            }
            
            console.log('✅ Event listeners inicializados');
        }
        
        // Inicializar imediatamente se o DOM já estiver pronto, senão aguardar DOMContentLoaded
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initEventListeners);
        } else {
            // DOM já está pronto
            initEventListeners();
        }
        
        // Fallback: tentar novamente após um pequeno delay (para mobile)
        setTimeout(function() {
            const qrBtn = document.getElementById('qr-scanner-btn');
            const cpfBtn = document.getElementById('cpf-search-btn');
            if (qrBtn && !qrBtn.onclick) {
                console.log('🔄 Reinicializando event listeners (fallback mobile)...');
                initEventListeners();
            }
        }, 500);
        
        // Validação removida - agora aceita CPF, Email ou Nome
        
    </script>
