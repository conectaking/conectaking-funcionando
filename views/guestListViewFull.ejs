<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- IMPORTANTE: Permitir acesso à câmera -->
    <meta http-equiv="Permissions-Policy" content="camera=(self), microphone=()">
    <title>Lista de Convidados - <%= guestList.event_title || 'Evento' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <!-- QR Code Scanner Library -->
    <script src="https://cdn.jsdelivr.net/npm/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            <% if (typeof guestList !== 'undefined' && guestList && guestList.background_image_url) { %>
            background-image: url('<%= guestList.background_image_url %>');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-color: <%= (typeof guestList !== 'undefined' && guestList && guestList.background_color) ? guestList.background_color : '#0D0D0F' %>;
            <% if (typeof guestList !== 'undefined' && guestList && guestList.background_opacity !== undefined && parseFloat(guestList.background_opacity) < 1) { %>
            position: relative;
            <% } %>
            <% } else { %>
            background: linear-gradient(135deg, <%= (typeof guestList !== 'undefined' && guestList && guestList.background_color) ? guestList.background_color : '#0D0D0F' %> 0%, #1C1C21 100%);
            <% } %>
            min-height: 100vh;
            padding: 0;
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.text_color) ? guestList.text_color : '#ECECEC' %>;
        }
        
        <% if (typeof guestList !== 'undefined' && guestList && guestList.background_image_url && guestList.background_opacity !== undefined && parseFloat(guestList.background_opacity) < 1) { %>
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: <%= (typeof guestList !== 'undefined' && guestList && guestList.background_color) ? guestList.background_color : '#0D0D0F' %>;
            opacity: <%= 1 - (parseFloat(guestList.background_opacity) || 0) %>;
            z-index: -1;
        }
        <% } %>
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0;
        }
        
        /* Banner/Header Image */
        .header-banner {
            width: 100%;
            height: 300px;
            object-fit: cover;
            display: block;
            margin-bottom: 0;
        }
        
        .header {
            <% if (typeof guestList !== 'undefined' && guestList && guestList.header_image_url) { %>
            background: linear-gradient(135deg, rgba(0,0,0,0.6), rgba(0,0,0,0.4));
            background-image: url('<%= guestList.header_image_url %>');
            background-size: cover;
            background-position: center;
            background-blend-mode: overlay;
            <% } else { %>
            background: linear-gradient(135deg, <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %> 0%, <%= (typeof guestList !== 'undefined' && guestList && guestList.secondary_color) ? guestList.secondary_color : '#FFB700' %> 100%);
            <% } %>
            margin-bottom: 0;
            padding: 40px 30px;
            border-radius: 0;
            position: relative;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }
        
        .header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }
        
        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        
        .header-content {
            position: relative;
            z-index: 1;
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            align-items: center;
            gap: 24px;
            flex-wrap: wrap;
        }
        
        .header-logo {
            flex-shrink: 0;
        }
        
        .header-logo img {
            max-width: 120px;
            max-height: 120px;
            width: auto;
            height: auto;
            object-fit: contain;
            background: rgba(255,255,255,0.95);
            padding: 12px;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
        }
        
        .header-text {
            flex: 1;
            min-width: 300px;
        }
        
        .header h1 {
            font-size: 42px;
            font-weight: 900;
            color: #FFFFFF;
            margin-bottom: 12px;
            text-shadow: 0 4px 12px rgba(0,0,0,0.4);
            letter-spacing: -1px;
            line-height: 1.2;
        }
        
        .header-subtitle {
            color: rgba(255,255,255,0.95);
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 16px;
            text-shadow: 0 2px 8px rgba(0,0,0,0.3);
        }
        
        .header-info {
            display: flex;
            flex-wrap: wrap;
            gap: 24px;
            margin-top: 16px;
        }
        
        .header-info-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: rgba(255,255,255,0.9);
            font-size: 14px;
            font-weight: 600;
            background: rgba(255,255,255,0.15);
            padding: 8px 16px;
            border-radius: 20px;
            backdrop-filter: blur(10px);
        }
        
        .header-info-item i {
            font-size: 16px;
        }
        
        .header p {
            color: rgba(255,255,255,0.85);
            font-size: 16px;
            margin: 0;
        }
        
        .tabs {
            display: flex;
            gap: 12px;
            margin-bottom: 32px;
            border-bottom: 3px solid rgba(255,255,255,0.1);
            background: linear-gradient(135deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
            padding: 8px;
            border-radius: 16px 16px 0 0;
        }
        
        .tab-button {
            padding: 14px 28px;
            background: transparent;
            border: none;
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.text_color) ? guestList.text_color : '#A1A1A1' %>;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            top: 2px;
            border-radius: 12px 12px 0 0;
        }
        
        .tab-button.active {
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %>;
            border-bottom-color: <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %>;
            background: rgba(255,255,255,0.05);
        }
        
        .tab-button:hover {
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %>;
            background: rgba(255,255,255,0.03);
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .guests-table {
            background: linear-gradient(135deg, rgba(255,255,255,0.05), rgba(255,255,255,0.02));
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.1);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
        }
        
        .table-header {
            <% 
                const primaryRgb = (typeof guestList !== 'undefined' && guestList && guestList.primary_color) 
                    ? guestList.primary_color.match(/^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i)
                    : null;
                const secondaryRgb = (typeof guestList !== 'undefined' && guestList && guestList.secondary_color)
                    ? guestList.secondary_color.match(/^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i)
                    : null;
                const primaryRgbStr = primaryRgb ? `${parseInt(primaryRgb[1], 16)},${parseInt(primaryRgb[2], 16)},${parseInt(primaryRgb[3], 16)}` : '255,199,0';
                const secondaryRgbStr = secondaryRgb ? `${parseInt(secondaryRgb[1], 16)},${parseInt(secondaryRgb[2], 16)},${parseInt(secondaryRgb[3], 16)}` : '255,183,0';
            %>
            background: linear-gradient(135deg, rgba(<%= primaryRgbStr %>, 0.2), rgba(<%= secondaryRgbStr %>, 0.15));
            padding: 20px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1.2fr 1fr 1fr 1fr;
            gap: 16px;
            font-weight: 700;
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.text_color) ? guestList.text_color : '#ECECEC' %>;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid rgba(255,255,255,0.1);
        }
        
        .table-row {
            padding: 20px;
            display: grid;
            grid-template-columns: 2fr 1.5fr 1.2fr 1fr 1fr 1fr;
            gap: 16px;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            align-items: center;
            transition: all 0.3s;
        }
        
        .guest-checkbox {
            width: 20px;
            height: 20px;
            cursor: pointer;
            accent-color: #FFC700;
        }
        
        .admin-controls {
            background: rgba(211, 47, 47, 0.1);
            border: 1px solid rgba(211, 47, 47, 0.3);
            border-radius: 12px;
            padding: 16px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
            flex-wrap: wrap;
        }
        
        .admin-controls-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }
        
        .admin-controls-right {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .btn-delete-admin {
            padding: 10px 20px;
            background: #d32f2f;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .btn-delete-admin:hover {
            background: #b71c1c;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(211, 47, 47, 0.4);
        }
        
        .btn-delete-admin:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }
        
        .btn-delete-guest {
            padding: 6px 12px;
            background: #d32f2f;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            white-space: nowrap;
        }
        
        .btn-delete-guest:hover {
            background: #b71c1c;
        }
        
        .btn-delete-guest:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .table-row:last-child {
            border-bottom: none;
        }
        
        .table-row:hover {
            <% 
                const hoverRgb = (typeof guestList !== 'undefined' && guestList && guestList.primary_color)
                    ? guestList.primary_color.match(/^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i)
                    : null;
                const hoverRgbStr = hoverRgb ? `${parseInt(hoverRgb[1], 16)},${parseInt(hoverRgb[2], 16)},${parseInt(hoverRgb[3], 16)}` : '255,199,0';
            %>
            background: rgba(<%= hoverRgbStr %>, 0.1);
            transform: translateX(4px);
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }
        
        .status-registered {
            background: rgba(74, 144, 226, 0.2);
            color: #4A90E2;
        }
        
        .status-confirmed {
            background: rgba(255, 199, 0, 0.2);
            color: #FFC700;
        }
        
        .status-checked_in {
            background: rgba(37, 211, 102, 0.2);
            color: #25D366;
        }
        
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: <%= guestList.text_color || '#A1A1A1' %>;
        }
        
        .empty-state i {
            font-size: 80px;
            margin-bottom: 24px;
            opacity: 0.2;
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %>;
        }
        
        .empty-state p {
            font-size: 18px;
            font-weight: 600;
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.text_color) ? guestList.text_color : '#A1A1A1' %>;
        }
        
        .main-content {
            padding: 40px 20px;
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 32px;
        }
        
        .stat-card {
            background: linear-gradient(135deg, rgba(255,255,255,0.05), rgba(255,255,255,0.02));
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.1);
            border-radius: 20px;
            padding: 28px;
            text-align: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %>, <%= (typeof guestList !== 'undefined' && guestList && guestList.secondary_color) ? guestList.secondary_color : '#FFB700' %>);
        }
        
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.3);
            border-color: rgba(255, 199, 0, 0.4);
        }
        
        .stat-card .stat-icon {
            font-size: 36px;
            margin-bottom: 12px;
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %>;
            opacity: 0.9;
        }
        
        .stat-card .stat-value {
            font-size: 48px;
            font-weight: 900;
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.primary_color) ? guestList.primary_color : '#FFC700' %>;
            margin: 8px 0;
            text-shadow: 0 2px 8px rgba(255, 199, 0, 0.3);
            line-height: 1;
        }
        
        .stat-card .stat-label {
            color: <%= (typeof guestList !== 'undefined' && guestList && guestList.text_color) ? guestList.text_color : '#A1A1A1' %>;
            font-size: 15px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 8px;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 10px 0;
            }
            
            .header {
                padding: 24px 16px;
                margin-bottom: 0;
            }
            
            .header-content {
                flex-direction: column;
                text-align: center;
            }
            
            .header-logo {
                margin: 0 auto 16px;
            }
            
            .header-logo img {
                max-width: 80px;
                max-height: 80px;
            }
            
            .header h1 {
                font-size: 28px;
            }
            
            .header-subtitle {
                font-size: 16px;
            }
            
            .header-info {
                justify-content: center;
                margin-top: 12px;
            }
            
            .header-info-item {
                font-size: 12px;
                padding: 6px 12px;
            }
            
            .main-content {
                padding: 24px 16px;
            }
            
            .stats-summary {
                grid-template-columns: 1fr;
                gap: 16px;
                margin-bottom: 24px;
            }
            
            .stat-card {
                padding: 24px;
            }
            
            .stat-card .stat-icon {
                font-size: 28px;
            }
            
            .stat-card .stat-value {
                font-size: 36px;
            }
            
            .stat-card .stat-label {
                font-size: 13px;
            }
            
            /* Seção de Confirmação Rápida - Mobile */
            .quick-confirm-section {
                padding: 16px !important;
                margin-bottom: 16px !important;
                border-radius: 12px !important;
            }
            
            .quick-confirm-section h2 {
                font-size: 18px !important;
                margin-bottom: 16px !important;
                flex-wrap: wrap;
            }
            
            .quick-confirm-section > div {
                display: flex !important;
                flex-direction: column !important;
                gap: 12px !important;
            }
            
            .quick-confirm-section button {
                width: 100% !important;
                padding: 14px 20px !important;
                font-size: 15px !important;
                justify-content: center !important;
            }
            
            .quick-confirm-section #cpf-search-input {
                width: 100% !important;
                padding: 14px 16px !important;
                font-size: 15px !important;
                margin-bottom: 8px;
            }
            
            .quick-confirm-section > div > div {
                display: flex !important;
                flex-direction: column !important;
                gap: 8px !important;
            }
            
            .quick-confirm-section > div > div button {
                width: 100% !important;
                padding: 14px 20px !important;
                font-size: 15px !important;
            }
            
            .tabs {
                flex-wrap: wrap;
                gap: 4px;
                margin-bottom: 16px;
            }
            
            .tab-button {
                padding: 10px 16px;
                font-size: 14px;
                flex: 1;
                min-width: calc(50% - 4px);
            }
            
            .table-header,
            .table-row {
                grid-template-columns: 1fr;
                gap: 8px;
                padding: 12px;
            }
            
            .admin-controls {
                flex-direction: column;
                align-items: stretch;
            }
            
            .admin-controls-left,
            .admin-controls-right {
                width: 100%;
                justify-content: space-between;
            }
            
            .table-header {
                display: none;
            }
            
            .table-row {
                border-left: 4px solid #FFC700;
                padding-left: 12px;
            }
            
            .table-row > div::before {
                content: attr(data-label) ": ";
                font-weight: 700;
                color: #FFC700;
                display: inline-block;
                min-width: 100px;
            }
            
            .status-badge {
                display: inline-block;
                padding: 6px 12px;
                font-size: 12px;
            }
            
            .empty-state {
                padding: 40px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Banner/Header Image (se configurado) -->
        <% if (typeof guestList !== 'undefined' && guestList && guestList.header_image_url) { %>
        <img src="<%= guestList.header_image_url %>" alt="Banner do Evento" class="header-banner">
        <% } %>
        
        <!-- Header Premium com Logo -->
        <div class="header">
            <div class="header-content">
                <% if (typeof guestList !== 'undefined' && guestList && guestList.form_logo_url) { %>
                <div class="header-logo">
                    <img src="<%= guestList.form_logo_url %>" alt="Logo do Evento">
                </div>
                <% } %>
                <div class="header-text">
                    <h1><i class="fas fa-users"></i> <%= (typeof guestList !== 'undefined' && guestList && guestList.event_title) ? guestList.event_title : 'Lista de Convidados' %></h1>
                    <p class="header-subtitle">Visualização completa para portaria</p>
                    <% if (typeof guestList !== 'undefined' && guestList && guestList.event_description) { %>
                    <p style="margin-top: 8px; font-size: 15px; color: rgba(255,255,255,0.8);"><%= guestList.event_description %></p>
                    <% } %>
                    <div class="header-info">
                        <% if (typeof guestList !== 'undefined' && guestList && guestList.event_date) { %>
                        <div class="header-info-item">
                            <i class="fas fa-calendar-alt"></i>
                            <span><%= new Date(guestList.event_date).toLocaleDateString('pt-BR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></span>
                        </div>
                        <% } %>
                        <% if (typeof guestList !== 'undefined' && guestList && (guestList.event_location || guestList.event_address)) { %>
                        <div class="header-info-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><%= guestList.event_location || guestList.event_address %></span>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="main-content">
            <div class="stats-summary">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-user-plus"></i></div>
                    <div class="stat-value"><%= typeof registeredGuests !== 'undefined' ? registeredGuests.length : 0 %></div>
                    <div class="stat-label">Cadastrados</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-clock"></i></div>
                    <div class="stat-value"><%= typeof notArrivedGuests !== 'undefined' && notArrivedGuests ? notArrivedGuests.length : (typeof registeredGuests !== 'undefined' ? registeredGuests.filter(g => g.status === 'registered').length : 0) %></div>
                    <div class="stat-label">Não Chegou</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                    <div class="stat-value"><%= typeof checkedInGuests !== 'undefined' ? checkedInGuests.length : 0 %></div>
                    <div class="stat-label">Chegou</div>
                </div>
            </div>
        
        <!-- Seção de Confirmação Rápida (QR Code e CPF) - Design Premium -->
        <% 
            const quickPrimaryRgb = (typeof guestList !== 'undefined' && guestList && guestList.primary_color)
                ? guestList.primary_color.match(/^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i)
                : null;
            const quickPrimaryRgbStr = quickPrimaryRgb ? `${parseInt(quickPrimaryRgb[1], 16)},${parseInt(quickPrimaryRgb[2], 16)},${parseInt(quickPrimaryRgb[3], 16)}` : '255,199,0';
        %>
        <div class="quick-confirm-section" style="background: linear-gradient(135deg, rgba(255,255,255,0.08), rgba(255,255,255,0.03)); backdrop-filter: blur(10px); border: 2px solid rgba(<%= quickPrimaryRgbStr %>, 0.4); border-radius: 24px; padding: 32px; margin-bottom: 32px; box-shadow: 0 8px 32px rgba(0,0,0,0.2); position: relative; overflow: hidden;">
