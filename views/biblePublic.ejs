<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>Versículo do Dia — ConectaKing</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(180deg, #0D0D0F 0%, #1a1a1e 100%);
            color: #ECECEC;
            min-height: 100vh;
            padding: 20px;
            padding-bottom: env(safe-area-inset-bottom, 20px);
        }
        .bible-wrap {
            max-width: 480px;
            margin: 0 auto;
            padding: 24px 0;
        }
        .bible-header {
            text-align: center;
            margin-bottom: 28px;
        }
        .bible-header i {
            font-size: 2.5rem;
            color: #FFC700;
            margin-bottom: 12px;
        }
        .bible-header h1 {
            font-family: 'Lora', serif;
            font-size: 1.5rem;
            font-weight: 600;
            color: #ECECEC;
        }
        .bible-header .date-label {
            font-size: 0.9rem;
            color: #A1A1A1;
            margin-top: 6px;
        }
        .bible-card {
            background: rgba(28, 28, 33, 0.95);
            border: 1px solid rgba(255, 199, 0, 0.2);
            border-radius: 16px;
            padding: 28px 24px;
            margin-bottom: 20px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }
        .bible-ref {
            font-family: 'Lora', serif;
            font-size: 1rem;
            color: #FFC700;
            margin-bottom: 16px;
            font-weight: 600;
        }
        .bible-text {
            font-family: 'Lora', serif;
            font-size: 1.2rem;
            line-height: 1.7;
            color: #ECECEC;
            margin-bottom: 20px;
        }
        .bible-reflexao {
            padding-top: 20px;
            border-top: 1px solid rgba(255,255,255,0.08);
            font-size: 0.95rem;
            line-height: 1.6;
            color: #B8B8B8;
            font-style: italic;
        }
        .bible-reflexao strong {
            color: #ECECEC;
            font-style: normal;
            font-size: 0.85rem;
            display: block;
            margin-bottom: 8px;
        }
        .bible-actions {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 12px;
            margin-top: 24px;
        }
        .bible-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            padding: 14px 24px;
            border-radius: 12px;
            font-size: 0.95rem;
            font-weight: 600;
            text-decoration: none;
            color: #000;
            background: #FFC700;
            border: none;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            font-family: inherit;
        }
        .bible-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 199, 0, 0.35);
        }
        .bible-btn.secondary {
            background: rgba(255,255,255,0.08);
            color: #ECECEC;
            border: 1px solid rgba(255,255,255,0.15);
        }
        .bible-btn.secondary:hover {
            background: rgba(255,255,255,0.12);
        }
        .bible-loading {
            text-align: center;
            padding: 48px 24px;
            color: #A1A1A1;
        }
        .bible-loading i {
            font-size: 2.5rem;
            color: #FFC700;
            margin-bottom: 16px;
            animation: pulse 1.5s ease infinite;
        }
        @keyframes pulse { 50% { opacity: 0.6; } }
        .bible-error {
            text-align: center;
            padding: 48px 24px;
            color: #E74C3C;
        }
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #A1A1A1;
            text-decoration: none;
            font-size: 0.9rem;
            margin-bottom: 24px;
            transition: color 0.2s;
        }
        .back-link:hover { color: #FFC700; }
        .translation-select {
            margin-bottom: 20px;
        }
        .translation-select label {
            font-size: 0.85rem;
            color: #A1A1A1;
            display: block;
            margin-bottom: 6px;
        }
        .translation-select select {
            width: 100%;
            padding: 12px 16px;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.15);
            background: rgba(0,0,0,0.3);
            color: #ECECEC;
            font-size: 0.95rem;
        }
        /* Receba mais de Deus hoje */
        .receba-card {
            background: linear-gradient(135deg, #1a4d2e 0%, #0d2818 100%);
            border-radius: 14px;
            padding: 20px;
            margin-bottom: 24px;
            border: 1px solid rgba(255,199,0,0.2);
        }
        .receba-card h2 {
            color: #fff;
            font-size: 1.2rem;
            margin-bottom: 16px;
            font-weight: 600;
        }
        .receba-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 12px;
        }
        @media (max-width: 500px) { .receba-grid { grid-template-columns: repeat(2, 1fr); } }
        @media (max-width: 340px) { .receba-grid { grid-template-columns: 1fr; } }
        .receba-item {
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 10px;
            padding: 14px 16px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 10px;
            transition: all 0.2s;
        }
        .receba-item:hover {
            background: rgba(255,199,0,0.15);
            border-color: rgba(255,199,0,0.4);
        }
        .receba-item.active {
            background: rgba(255,199,0,0.2);
            border-color: #FFC700;
        }
        .receba-item span { color: #fff; font-size: 0.9rem; font-weight: 500; }
        .receba-item i.fa-arrow-right { color: #FFC700; font-size: 0.85rem; }
        .receba-content { display: none; margin-top: 16px; padding-top: 16px; border-top: 1px solid rgba(255,255,255,0.15); }
        .receba-content.show { display: block; }
        .receba-content .bible-ref, .receba-content .bible-text, .receba-content .bible-reflexao { color: #e8e8e8; }
        /* Livros da Bíblia */
        .livros-section { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 24px; }
        @media (max-width: 500px) { .livros-section { grid-template-columns: 1fr; } }
        .livros-col {
            background: rgba(255,255,255,0.04);
            border-radius: 12px;
            padding: 16px;
            border: 1px solid rgba(255,255,255,0.08);
        }
        .livros-col h3 { font-size: 0.95rem; color: #FFC700; margin-bottom: 12px; }
        .livros-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 6px 12px; }
        .livros-grid a { color: #7dd3fc; text-decoration: none; font-size: 0.85rem; }
        .livros-grid a:hover { color: #FFC700; text-decoration: underline; }
    </style>
</head>
<body>
    <div class="bible-wrap">
        <a href="<%= (typeof API_URL !== 'undefined' && API_URL ? API_URL.replace(/\/$/, '') : (typeof baseUrl !== 'undefined' ? baseUrl : '')) %>/<%= slug %>" class="back-link">
            <i class="fas fa-arrow-left"></i> Voltar ao perfil
        </a>

        <div class="bible-header">
            <i class="fas fa-bible"></i>
            <h1>Bíblia</h1>
            <div class="date-label" id="date-label"></div>
        </div>

        <!-- Receba mais de Deus hoje -->
        <div class="receba-card">
            <h2>Receba mais de Deus hoje:</h2>
            <div class="receba-grid">
                <div class="receba-item active" data-tipo="versiculo">
                    <span><i class="fas fa-book-open" style="margin-right:8px"></i>Versículo do Dia</span>
                    <i class="fas fa-arrow-right"></i>
                </div>
                <div class="receba-item" data-tipo="palavra">
                    <span><i class="fas fa-font" style="margin-right:8px"></i>Palavra do Dia</span>
                    <i class="fas fa-arrow-right"></i>
                </div>
                <div class="receba-item" data-tipo="salmo">
                    <span><i class="fas fa-music" style="margin-right:8px"></i>Salmo do Dia</span>
                    <i class="fas fa-arrow-right"></i>
                </div>
                <div class="receba-item" data-tipo="devocional">
                    <span><i class="fas fa-heart" style="margin-right:8px"></i>Devocional Diário</span>
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>
            <div id="receba-versiculo" class="receba-content show">
                <div id="bible-content">
                    <div class="bible-loading" id="bible-loading">
                        <i class="fas fa-spinner fa-spin"></i>
                        <p>Carregando versículo...</p>
                    </div>
                </div>
                <div class="bible-actions" id="bible-actions" style="display: none;">
                    <button type="button" class="bible-btn" id="btn-ouvir">
                        <i class="fas fa-volume-up"></i> Ouvir
                    </button>
                    <button type="button" class="bible-btn" id="btn-compartilhar">
                        <i class="fas fa-share-alt"></i> Compartilhar
                    </button>
                    <button type="button" class="bible-btn secondary" id="btn-prev-days">
                        <i class="fas fa-history"></i> Ver dias anteriores
                    </button>
                </div>
            </div>
            <div id="receba-palavra" class="receba-content">
                <div id="palavra-container"><div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Carregando...</p></div></div>
            </div>
            <div id="receba-salmo" class="receba-content">
                <div id="salmo-container"><div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Carregando...</p></div></div>
            </div>
            <div id="receba-devocional" class="receba-content">
                <div id="devocional-container"><div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Carregando...</p></div></div>
            </div>
        </div>

        <!-- Devocionais 365, Estudos, Esboços -->
        <div class="bible-card">
            <h3 style="margin-bottom:16px;color:#FFC700">Devocionais 365</h3>
            <p style="font-size:0.9rem;color:#A1A1A1;margin-bottom:12px">Reflexões para cada dia do ano.</p>
            <div style="display:flex;gap:10px;flex-wrap:wrap;margin-bottom:16px;align-items:center">
                <input type="number" id="dev365-day" min="1" max="365" placeholder="Dia (1-365)" style="width:100px;padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.15);background:rgba(0,0,0,0.3);color:#ECECEC">
                <button type="button" class="bible-btn" id="btn-dev365-load"><i class="fas fa-book-open"></i> Carregar</button>
                <button type="button" class="bible-btn secondary" id="btn-dev365-today"><i class="fas fa-calendar-check"></i> Dia de hoje</button>
            </div>
            <div id="dev365-content"><p style="color:#A1A1A1;font-size:0.9rem">Selecione um dia ou clique em "Dia de hoje".</p></div>
        </div>

        <div class="bible-card">
            <h3 style="margin-bottom:16px;color:#FFC700">Estudos Bíblicos</h3>
            <p style="font-size:0.9rem;color:#A1A1A1;margin-bottom:12px">Estudos por temas: Escatologia, Família, Finanças, Liderança, Hermenêutica.</p>
            <div id="estudos-public-content"><div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Carregando temas...</p></div></div>
        </div>

        <div class="bible-card">
            <h3 style="margin-bottom:16px;color:#FFC700">Esboços para Pregação</h3>
            <p style="font-size:0.9rem;color:#A1A1A1;margin-bottom:12px">Esboços por categorias: Avivamento, Casamento, Prosperidade, Batalha Espiritual, Família.</p>
            <div id="esbocos-public-content"><div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Carregando categorias...</p></div></div>
        </div>

        <div class="bible-card">
            <h3 style="margin-bottom:16px;color:#FFC700">Busca</h3>
            <div style="display:flex;gap:10px;margin-bottom:12px;flex-wrap:wrap">
                <input type="text" id="busca-public-input" placeholder="Buscar em devocionais, estudos e esboços..." style="flex:1;min-width:180px;padding:10px 14px;border-radius:8px;border:1px solid rgba(255,255,255,0.15);background:rgba(0,0,0,0.3);color:#ECECEC">
                <button type="button" class="bible-btn" id="btn-busca-public"><i class="fas fa-search"></i> Buscar</button>
            </div>
            <div id="busca-public-resultados"></div>
        </div>

        <!-- Livros da Bíblia (todos internos - sem links externos) -->
        <div class="bible-card">
            <h3 style="margin-bottom:16px;color:#FFC700">Livros da Bíblia</h3>
            <p style="font-size:0.9rem;color:#A1A1A1;margin-bottom:12px">Leia a Bíblia completa. Clique em um livro para abrir o capítulo 1.</p>
            <div class="livros-section">
                <div class="livros-col">
                    <h3>Antigo Testamento</h3>
                    <div class="livros-grid" id="livros-at">
                        <% (booksManifest && booksManifest.at || []).forEach(function(b) { %>
                        <a href="/<%= slug %>/bible/<%= b.id %>/1"><%= b.name %></a>
                        <% }); %>
                    </div>
                </div>
                <div class="livros-col">
                    <h3>Novo Testamento</h3>
                    <div class="livros-grid" id="livros-nt">
                        <% (booksManifest && booksManifest.nt || []).forEach(function(b) { %>
                        <a href="/<%= slug %>/bible/<%= b.id %>/1"><%= b.name %></a>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        (function() {
            const API_URL = (typeof window !== 'undefined' && window.location && window.location.origin) ? window.location.origin : '<%= typeof API_URL !== "undefined" ? API_URL : "" %>';
            const translation = '<%= translation || "nvi" %>';
            const slug = '<%= slug %>';

            let palavraLoaded = false, salmoLoaded = false, devocionalLoaded = false;

            function formatDate(str) {
                if (!str) return '';
                const d = new Date(str);
                const opts = { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' };
                return d.toLocaleDateString('pt-BR', opts);
            }

            async function loadVerse(dateStr) {
                const url = `${API_URL}/api/bible/verse-of-day?date=${encodeURIComponent(dateStr || '')}&translation=${encodeURIComponent(translation)}`;
                const res = await fetch(url);
                const json = await res.json().catch(() => ({}));
                if (!res.ok || !json.success) throw new Error(json.message || 'Erro ao carregar');
                return json.data;
            }

            let currentVerse = null;

            function renderVerse(verse) {
                currentVerse = verse;
                const content = document.getElementById('bible-content');
                const actions = document.getElementById('bible-actions');
                const dateLabel = document.getElementById('date-label');

                document.getElementById('bible-loading').style.display = 'none';
                dateLabel.textContent = formatDate(verse.date);

                content.innerHTML = `
                    <div class="bible-ref">${verse.ref || ''}</div>
                    <div class="bible-text">"${verse.texto || ''}"</div>
                    ${verse.reflexao ? `
                    <div class="bible-reflexao">
                        <strong>Reflexão</strong>
                        ${verse.reflexao}
                    </div>
                    ` : ''}
                `;
                actions.style.display = 'flex';
            }

            document.getElementById('btn-ouvir').addEventListener('click', function() {
                if (!currentVerse || !currentVerse.texto) return;
                const u = new SpeechSynthesisUtterance(currentVerse.texto);
                u.lang = 'pt-BR';
                speechSynthesis.speak(u);
            });

            document.getElementById('btn-compartilhar').addEventListener('click', function() {
                if (!currentVerse || !currentVerse.texto) return;
                const txt = '"' + currentVerse.texto + '" — ' + (currentVerse.ref || '');
                const urlWhatsApp = 'https://wa.me/?text=' + encodeURIComponent(txt);
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    navigator.clipboard.writeText(txt).then(function() {
                        if (confirm('Versículo copiado! Deseja compartilhar no WhatsApp?')) window.open(urlWhatsApp);
                    }).catch(function() { window.open(urlWhatsApp); });
                } else {
                    window.open(urlWhatsApp);
                }
            });

            function showError(msg, containerId) {
                const container = document.getElementById(containerId || 'bible-content');
                if (!container) return;
                container.innerHTML = `<div class="bible-error"><i class="fas fa-exclamation-circle"></i><p>${msg}</p></div>`;
            }

            document.getElementById('btn-prev-days').addEventListener('click', function() {
                const today = new Date();
                const dates = [];
                for (let i = 1; i <= 7; i++) {
                    const d = new Date(today);
                    d.setDate(d.getDate() - i);
                    dates.push(d.toISOString().slice(0, 10));
                }
                let html = '<strong style="margin-bottom:12px;display:block;">Escolha uma data:</strong>';
                dates.forEach(d => {
                    const label = formatDate(d);
                    html += `<button type="button" class="bible-btn secondary" style="margin-bottom:8px;width:100%;" data-date="${d}">${label}</button>`;
                });
                document.getElementById('bible-content').innerHTML = html;
                document.getElementById('bible-loading').style.display = 'none';
                document.getElementById('bible-actions').style.display = 'none';
                document.getElementById('bible-content').querySelectorAll('[data-date]').forEach(btn => {
                    btn.addEventListener('click', async () => {
                        document.getElementById('bible-content').innerHTML = '<div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Carregando...</p></div>';
                        document.getElementById('bible-actions').style.display = 'none';
                        try {
                            const verse = await loadVerse(btn.dataset.date);
                            renderVerse(verse);
                        } catch (e) {
                            showError(e.message || 'Erro ao carregar versículo.', 'bible-content');
                        }
                    });
                });
            });

            document.querySelectorAll('.receba-item').forEach(function(item) {
                item.addEventListener('click', function() {
                    const tipo = this.dataset.tipo;
                    document.querySelectorAll('.receba-item').forEach(function(x) { x.classList.remove('active'); });
                    document.querySelectorAll('.receba-content').forEach(function(x) { x.classList.remove('show'); });
                    this.classList.add('active');
                    var content = document.getElementById('receba-' + tipo);
                    if (content) content.classList.add('show');
                    if (tipo === 'palavra' && !palavraLoaded) loadPalavra();
                    if (tipo === 'salmo' && !salmoLoaded) loadSalmo();
                    if (tipo === 'devocional' && !devocionalLoaded) loadDevocional();
                });
            });

            async function loadPalavra() {
                var el = document.getElementById('palavra-container');
                try {
                    var res = await fetch(API_URL + '/api/bible/palavra-do-dia');
                    var json = await res.json().catch(function() { return {}; });
                    var p = json.data;
                    if (!p) throw new Error('Palavra não encontrada');
                    el.innerHTML = '<div class="bible-ref">' + p.palavra + '</div><div class="bible-text" style="color:#e8e8e8">' + (p.significado || '') + '</div>' + (p.ref ? '<div class="bible-reflexao" style="margin-top:12px"><strong>Referência</strong> ' + p.ref + '</div>' : '');
                    palavraLoaded = true;
                } catch (e) {
                    el.innerHTML = '<div class="bible-error">' + (e.message || 'Erro ao carregar.') + '</div>';
                }
            }

            async function loadSalmo() {
                var el = document.getElementById('salmo-container');
                try {
                    var res = await fetch(API_URL + '/api/bible/salmo-do-dia');
                    var json = await res.json().catch(function() { return {}; });
                    var s = json.data;
                    if (!s) throw new Error('Salmo não encontrado');
                    el.innerHTML = '<div class="bible-ref">' + (s.ref || 'Salmos ' + (s.capitulo || '') + ':' + (s.versiculo || '')) + '</div><div class="bible-text" style="color:#e8e8e8">"' + (s.texto || '') + '"</div>' + (s.reflexao ? '<div class="bible-reflexao"><strong>Reflexão</strong> ' + s.reflexao + '</div>' : '');
                    salmoLoaded = true;
                } catch (e) {
                    el.innerHTML = '<div class="bible-error">' + (e.message || 'Erro ao carregar.') + '</div>';
                }
            }

            async function loadDevocional() {
                var el = document.getElementById('devocional-container');
                try {
                    var res = await fetch(API_URL + '/api/bible/devocional-do-dia');
                    var json = await res.json().catch(function() { return {}; });
                    var d = json.data;
                    if (!d) throw new Error('Devocional não encontrado');
                    var html = '<div class="bible-ref">' + (d.titulo || '') + '</div><div style="color:#FFC700;font-size:0.9rem;margin-bottom:12px">' + (d.versiculo || '') + '</div><div class="bible-text" style="color:#e8e8e8;line-height:1.7">' + (d.texto || d.reflexao || '').replace(/\n/g, '<br>') + '</div>';
                    if (d.aplicacao) html += '<div class="bible-reflexao" style="margin-top:16px"><strong>Aplicação Prática</strong><br>' + (d.aplicacao || '').replace(/\n/g, '<br>') + '</div>';
                    if (d.oracao) html += '<div class="bible-reflexao" style="margin-top:16px"><strong>Oração</strong><br>' + (d.oracao || '').replace(/\n/g, '<br>') + '</div>';
                    el.innerHTML = html;
                    devocionalLoaded = true;
                } catch (e) {
                    el.innerHTML = '<div class="bible-error">' + (e.message || 'Erro ao carregar.') + '</div>';
                }
            }

            function getDayOfYear() {
                var now = new Date();
                var start = new Date(now.getFullYear(), 0, 0);
                return Math.floor((now - start) / 86400000);
            }
            async function loadDev365ByDay(day) {
                var el = document.getElementById('dev365-content');
                el.innerHTML = '<div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Carregando...</p></div>';
                try {
                    var res = await fetch(API_URL + '/api/bible/devotionals-365/' + day);
                    var json = await res.json().catch(function() { return {}; });
                    var d = json.data;
                    if (!d) throw new Error('Devocional não encontrado para este dia.');
                    el.innerHTML = '<div class="bible-ref">' + (d.titulo || '') + '</div><div style="color:#FFC700;font-size:0.9rem;margin-bottom:12px">' + (d.versiculo_ref || '') + '</div>' + (d.versiculo_texto ? '<div class="bible-text" style="margin-bottom:16px">"' + d.versiculo_texto + '"</div>' : '') + '<div class="bible-text" style="line-height:1.7">' + (d.reflexao || '').replace(/\n/g, '<br>') + '</div>' + (d.aplicacao ? '<div class="bible-reflexao" style="margin-top:20px"><strong>Aplicação Prática</strong><br>' + (d.aplicacao || '').replace(/\n/g, '<br>') + '</div>' : '') + (d.oracao ? '<div class="bible-reflexao" style="margin-top:16px"><strong>Oração</strong><br>' + (d.oracao || '').replace(/\n/g, '<br>') + '</div>' : '');
                } catch (e) {
                    el.innerHTML = '<div class="bible-error">' + (e.message || 'Erro ao carregar.') + '</div>';
                }
            }
            document.getElementById('btn-dev365-load').addEventListener('click', function() {
                var day = parseInt(document.getElementById('dev365-day').value, 10);
                if (day < 1 || day > 365) { alert('Digite um dia entre 1 e 365.'); return; }
                loadDev365ByDay(day);
            });
            document.getElementById('btn-dev365-today').addEventListener('click', function() {
                var day = getDayOfYear();
                document.getElementById('dev365-day').value = day;
                loadDev365ByDay(day);
            });

            (async function loadEstudosPublic() {
                var el = document.getElementById('estudos-public-content');
                try {
                    var res = await fetch(API_URL + '/api/bible/study-themes');
                    var json = await res.json().catch(function() { return {}; });
                    var themes = (json.data && json.data.themes) || [];
                    if (!themes.length) { el.innerHTML = '<p style="color:#A1A1A1">Nenhum tema disponível.</p>'; return; }
                    el.innerHTML = themes.map(function(t) {
                        return '<div style="margin-bottom:12px;padding:12px;border:1px solid rgba(255,255,255,0.08);border-radius:8px"><strong style="color:#FFC700">' + t.nome + '</strong>' + (t.descricao ? '<p style="font-size:0.85rem;color:#A1A1A1;margin-top:6px">' + t.descricao + '</p>' : '') + '<p style="font-size:0.85rem;color:#7dd3fc;margin-top:8px">Acesse pelo painel do cartão para ver os estudos.</p></div>';
                    }).join('');
                } catch (e) { el.innerHTML = '<div class="bible-error">' + (e.message || 'Erro.') + '</div>'; }
            })();

            (async function loadEsbocosPublic() {
                var el = document.getElementById('esbocos-public-content');
                try {
                    var res = await fetch(API_URL + '/api/bible/outline-categories');
                    var json = await res.json().catch(function() { return {}; });
                    var cats = (json.data && json.data.categories) || [];
                    if (!cats.length) { el.innerHTML = '<p style="color:#A1A1A1">Nenhuma categoria disponível.</p>'; return; }
                    var res2 = await fetch(API_URL + '/api/bible/outlines');
                    var json2 = await res2.json().catch(function() { return {}; });
                    var outlines = (json2.data && json2.data.outlines) || [];
                    var byCat = {};
                    outlines.forEach(function(o) { var c = o.category_name || 'Outros'; if (!byCat[c]) byCat[c] = []; byCat[c].push(o); });
                    el.innerHTML = Object.keys(byCat).map(function(cat) {
                        var list = byCat[cat].map(function(o) { return '<div style="font-size:0.9rem;color:#ECECEC;margin-top:6px">• ' + o.titulo + '</div>'; }).join('');
                        return '<div style="margin-bottom:16px"><strong style="color:#FFC700">' + cat + '</strong>' + list + '</div>';
                    }).join('') + '<p style="font-size:0.85rem;color:#7dd3fc;margin-top:12px">Acesse pelo painel do cartão para ver o conteúdo completo dos esboços.</p>';
                } catch (e) { el.innerHTML = '<div class="bible-error">' + (e.message || 'Erro.') + '</div>'; }
            })();

            document.getElementById('btn-busca-public').addEventListener('click', async function() {
                var q = (document.getElementById('busca-public-input').value || '').trim();
                var el = document.getElementById('busca-public-resultados');
                if (!q || q.length < 2) { el.innerHTML = '<p style="color:#A1A1A1">Digite pelo menos 2 caracteres.</p>'; return; }
                el.innerHTML = '<div class="bible-loading"><i class="fas fa-spinner fa-spin"></i><p>Buscando...</p></div>';
                try {
                    var res = await fetch(API_URL + '/api/bible/search?q=' + encodeURIComponent(q) + '&limit=15');
                    var json = await res.json().catch(function() { return {}; });
                    var data = json.data || {};
                    var dev = (data.devotionals || []).map(function(d) { return '<div style="padding:10px;border:1px solid rgba(255,255,255,0.08);border-radius:8px;margin-bottom:8px"><strong style="color:#FFC700">Devocional Dia ' + d.day_of_year + '</strong> — ' + d.titulo + '<div style="font-size:0.85rem;color:#A1A1A1;margin-top:4px">' + (d.reflexao_preview || '').substring(0, 120) + '...</div></div>'; }).join('');
                    var stud = (data.studies || []).map(function(s) { return '<div style="padding:10px;border:1px solid rgba(255,255,255,0.08);border-radius:8px;margin-bottom:8px"><strong style="color:#FFC700">Estudo</strong> — ' + s.titulo + ' (' + (s.theme_name || '') + ')</div>'; }).join('');
                    var out = (data.outlines || []).map(function(o) { return '<div style="padding:10px;border:1px solid rgba(255,255,255,0.08);border-radius:8px;margin-bottom:8px"><strong style="color:#FFC700">Esboço</strong> — ' + o.titulo + ' (' + (o.category_name || '') + ')</div>'; }).join('');
                    var html = (dev ? '<h4 style="margin-bottom:10px;color:#ECECEC;font-size:1rem">Devocionais</h4>' + dev : '') + (stud ? '<h4 style="margin:16px 0 10px;color:#ECECEC;font-size:1rem">Estudos</h4>' + stud : '') + (out ? '<h4 style="margin:16px 0 10px;color:#ECECEC;font-size:1rem">Esboços</h4>' + out : '');
                    el.innerHTML = html || '<p style="color:#A1A1A1">Nenhum resultado encontrado.</p>';
                } catch (e) { el.innerHTML = '<div class="bible-error">' + (e.message || 'Erro na busca.') + '</div>'; }
            });

            (async function init() {
                try {
                    var verse = await loadVerse('');
                    renderVerse(verse);
                } catch (e) {
                    document.getElementById('bible-loading').style.display = 'none';
                    showError(e.message || 'Erro ao carregar versículo do dia.', 'bible-content');
                }
            })();
        })();
    </script>
