<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscrição - <%= guestList.event_title || 'Evento' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            <% if (guestList.background_image_url) { %>
            background-image: url('<%= guestList.background_image_url %>');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-color: <%= guestList.background_color || '#0D0D0F' %>;
            <% if (guestList.background_opacity !== undefined && guestList.background_opacity < 1) { %>
            position: relative;
            <% } %>
            <% } else { %>
            background: linear-gradient(135deg, <%= guestList.background_color || '#0D0D0F' %> 0%, #1C1C21 100%);
            <% } %>
            min-height: 100vh;
            padding: 20px;
            color: <%= guestList.text_color || '#ECECEC' %>;
        }
        
        <% if (guestList.background_image_url && guestList.background_opacity !== undefined && guestList.background_opacity < 1) { %>
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: <%= guestList.background_color || '#0D0D0F' %>;
            opacity: <%= 1 - (parseFloat(guestList.background_opacity) || 0) %>;
            z-index: -1;
        }
        <% } %>
        
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 40px 0;
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .header h1 {
            font-size: 32px;
            font-weight: 800;
            color: <%= guestList.primary_color || '#FFC700' %>;
            margin-bottom: 12px;
        }
        
        <% if (guestList.header_image_url) { %>
        .header-image {
            width: 100%;
            max-width: 600px;
            margin: 0 auto 30px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.5);
        }
        .header-image img {
            width: 100%;
            height: auto;
            display: block;
        }
        <% } %>
        
        .header p {
            color: #A1A1A1;
            font-size: 16px;
        }
        
        .form-card {
            background: #1C1C21;
            border: 1px solid #2C2C2F;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.5);
        }
        
        .form-group {
            margin-bottom: 24px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #ECECEC;
            font-weight: 600;
            font-size: 14px;
        }
        
        .form-group input {
            width: 100%;
            padding: 14px 16px;
            background: #0D0D0F;
            border: 2px solid #2C2C2F;
            border-radius: 12px;
            color: #ECECEC;
            font-size: 16px;
            transition: all 0.3s;
        }
        
        .form-group input:focus,
        .form-group textarea:focus,
        .form-group select:focus {
            outline: none;
            border-color: <%= guestList.primary_color || '#FFC700' %>;
            box-shadow: 0 0 0 3px <%= (guestList.primary_color || '#FFC700') %>33;
        }
        
        .btn-submit {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, <%= guestList.primary_color || '#FFC700' %>, <%= guestList.primary_color || '#FFC700' %>dd);
            color: <%= (guestList.theme === 'dark' || !guestList.theme) ? '#000' : '#FFF' %>;
            border: none;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 8px;
        }
        
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px <%= (guestList.primary_color || '#FFC700') %>66;
        }
        
        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .btn-submit:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }
        
        .alert {
            padding: 16px;
            border-radius: 12px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .alert-success {
            background: rgba(37, 211, 102, 0.2);
            border: 1px solid #25D366;
            color: #25D366;
        }
        
        .alert-warning {
            background: rgba(255, 199, 0, 0.2);
            border: 1px solid #FFC700;
            color: #FFC700;
        }
        
        .alert-error {
            background: rgba(255, 68, 68, 0.2);
            border: 1px solid #ff4444;
            color: #ff4444;
        }
        
        .info-box {
            background: rgba(255, 199, 0, 0.1);
            border: 1px solid rgba(255, 199, 0, 0.3);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 24px;
        }
        
        .info-box h3 {
            color: #FFC700;
            margin-bottom: 12px;
            font-size: 18px;
        }
        
        .info-box p {
            color: #A1A1A1;
            margin-bottom: 8px;
            line-height: 1.6;
        }
        
        @media (max-width: 768px) {
            .form-card {
                padding: 24px;
            }
            
            .header h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <% if (guestList.header_image_url) { %>
        <div class="header-image">
            <img src="<%= guestList.header_image_url %>" alt="<%= guestList.event_title || 'Evento' %>">
        </div>
        <% } %>
        <div class="header">
            <h1><i class="fas fa-user-plus"></i> Inscrição no Evento</h1>
            <p><%= guestList.event_title || 'Evento' %></p>
            <% if (guestList.event_description) { %>
            <p style="margin-top: 8px; color: #A1A1A1; font-size: 14px;"><%= guestList.event_description %></p>
            <% } %>
        </div>
        
        <% if (isFull) { %>
        <div class="alert alert-error">
            <i class="fas fa-exclamation-circle"></i>
            <div>
                <strong>Inscrições Encerradas</strong>
                <p>O evento atingiu o limite máximo de <%= maxGuests %> convidados.</p>
            </div>
        </div>
        <% } else if (!canRegister) { %>
        <div class="alert alert-warning">
            <i class="fas fa-info-circle"></i>
            <div>
                <strong>Inscrições Fechadas</strong>
                <p>As inscrições não estão abertas no momento.</p>
            </div>
        </div>
        <% } else { %>
        
        <% if (guestList.event_description) { %>
        <div class="info-box">
            <h3><i class="fas fa-info-circle"></i> Sobre o Evento</h3>
            <p><%= guestList.event_description %></p>
            <% if (guestList.event_date || guestList.event_time || guestList.event_location) { %>
            <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid rgba(255,199,0,0.2);">
                <% if (guestList.event_date) { %>
                <p><i class="fas fa-calendar"></i> <strong>Data:</strong> <%= new Date(guestList.event_date).toLocaleDateString('pt-BR') %></p>
                <% } %>
                <% if (guestList.event_time) { %>
                <p><i class="fas fa-clock"></i> <strong>Horário:</strong> <%= guestList.event_time %></p>
                <% } %>
                <% if (guestList.event_location) { %>
                <p><i class="fas fa-map-marker-alt"></i> <strong>Local:</strong> <%= guestList.event_location %></p>
                <% } %>
            </div>
            <% } %>
        </div>
        <% } %>
        
        <% if (maxGuests) { %>
        <div class="info-box" style="background: rgba(74, 144, 226, 0.1); border-color: rgba(74, 144, 226, 0.3);">
            <p><i class="fas fa-users"></i> <strong>Vagas disponíveis:</strong> <%= maxGuests - currentCount %> de <%= maxGuests %></p>
        </div>
        <% } %>
        
        <div class="form-card">
            <form id="registration-form">
                <!-- Campos obrigatórios padrão (sempre presentes) -->
                <div class="form-group">
                    <label for="name">Nome Completo <span style="color: #ff4444;">*</span></label>
                    <input type="text" id="name" name="name" required placeholder="Digite seu nome completo">
                </div>
                
                <div class="form-group">
                    <label for="whatsapp">WhatsApp <span style="color: #ff4444;">*</span></label>
                    <input type="tel" id="whatsapp" name="whatsapp" required placeholder="(00) 00000-0000">
                </div>
                
                <div class="form-group">
                    <label for="document">CPF/CNPJ <span style="color: #ff4444;">*</span></label>
                    <input type="text" id="document" name="document" required placeholder="000.000.000-00">
                </div>
                
                <% if (guestList.use_custom_form && guestList.custom_form_fields && Array.isArray(guestList.custom_form_fields) && guestList.custom_form_fields.length > 0) { %>
                <!-- Campos customizados do KingForms -->
                <div id="custom-fields-container" style="margin-top: 24px; padding-top: 24px; border-top: 2px solid rgba(255,255,255,0.1);">
                    <h3 style="color: #FFC700; margin-bottom: 20px; font-size: 18px;">
                        <i class="fas fa-sliders-h"></i> Informações Adicionais
                    </h3>
                    <% guestList.custom_form_fields.forEach((field, index) => { %>
                        <div class="form-group">
                            <label for="custom_<%= index %>">
                                <%= field.label || 'Campo' %>
                                <% if (field.required) { %> <span style="color: #ff4444;">*</span><% } %>
                            </label>
                            <% if (field.type === 'short_text' || field.type === 'email' || field.type === 'phone' || field.type === 'number' || field.type === 'url') { %>
                                <input 
                                    type="<%= field.type === 'email' ? 'email' : field.type === 'phone' ? 'tel' : field.type === 'number' ? 'number' : field.type === 'url' ? 'url' : 'text' %>" 
                                    id="custom_<%= index %>" 
                                    name="custom_<%= field.label || 'campo_' + index %>"
                                    <% if (field.required) { %>required<% } %>
                                    placeholder="<%= field.placeholder || 'Digite sua resposta' %>">
                            <% } else if (field.type === 'long_text') { %>
                                <textarea 
                                    id="custom_<%= index %>" 
                                    name="custom_<%= field.label || 'campo_' + index %>"
                                    <% if (field.required) { %>required<% } %>
                                    placeholder="<%= field.placeholder || 'Digite sua resposta' %>"
                                    rows="4" style="width: 100%; padding: 14px 16px; background: #0D0D0F; border: 2px solid #2C2C2F; border-radius: 12px; color: #ECECEC; font-size: 16px; resize: vertical;"></textarea>
                            <% } else if (field.type === 'select' && field.options) { %>
                                <select 
                                    id="custom_<%= index %>" 
                                    name="custom_<%= field.label || 'campo_' + index %>"
                                    <% if (field.required) { %>required<% } %>
                                    style="width: 100%; padding: 14px 16px; background: #0D0D0F; border: 2px solid #2C2C2F; border-radius: 12px; color: #ECECEC; font-size: 16px;">
                                    <option value="">Selecione...</option>
                                    <% const options = Array.isArray(field.options) ? field.options : field.options.split(','); %>
                                    <% options.forEach(opt => { %>
                                        <option value="<%= opt.trim() %>"><%= opt.trim() %></option>
                                    <% }); %>
                                </select>
                            <% } else if (field.type === 'radio' && field.options) { %>
                                <% const options = Array.isArray(field.options) ? field.options : field.options.split(','); %>
                                <% options.forEach((opt, optIndex) => { %>
                                    <div style="margin: 12px 0; display: flex; align-items: center;">
                                        <input 
                                            type="radio" 
                                            id="custom_<%= index %>_<%= optIndex %>" 
                                            name="custom_<%= field.label || 'campo_' + index %>"
                                            value="<%= opt.trim() %>"
                                            style="width: 20px; height: 20px; margin-right: 12px; accent-color: #FFC700;"
                                            <% if (field.required) { %>required<% } %>>
                                        <label for="custom_<%= index %>_<%= optIndex %>" style="margin: 0; font-weight: normal; cursor: pointer;"><%= opt.trim() %></label>
                                    </div>
                                <% }); %>
                            <% } else if (field.type === 'checkbox' && field.options) { %>
                                <% const options = Array.isArray(field.options) ? field.options : field.options.split(','); %>
                                <% options.forEach((opt, optIndex) => { %>
                                    <div style="margin: 12px 0; display: flex; align-items: center;">
                                        <input 
                                            type="checkbox" 
                                            id="custom_<%= index %>_<%= optIndex %>" 
                                            name="custom_<%= field.label || 'campo_' + index %>"
                                            value="<%= opt.trim() %>"
                                            style="width: 20px; height: 20px; margin-right: 12px; accent-color: #FFC700;">
                                        <label for="custom_<%= index %>_<%= optIndex %>" style="margin: 0; font-weight: normal; cursor: pointer;"><%= opt.trim() %></label>
                                    </div>
                                <% }); %>
                            <% } else if (field.type === 'date') { %>
                                <input 
                                    type="date" 
                                    id="custom_<%= index %>" 
                                    name="custom_<%= field.label || 'campo_' + index %>"
                                    <% if (field.required) { %>required<% } %>
                                    style="width: 100%; padding: 14px 16px; background: #0D0D0F; border: 2px solid #2C2C2F; border-radius: 12px; color: #ECECEC; font-size: 16px;">
                            <% } %>
                        </div>
                    <% }); %>
                </div>
                <% } else { %>
                <!-- Campos opcionais padrão (quando não há campos customizados) -->
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="seu@email.com">
                </div>
                
                <div class="form-group">
                    <label for="phone">Telefone</label>
                    <input type="tel" id="phone" name="phone" placeholder="(00) 00000-0000">
                </div>
                
                <div class="form-group">
                    <label for="address">Endereço</label>
                    <input type="text" id="address" name="address" placeholder="Rua, número, complemento">
                </div>
                
                <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 16px;">
                    <div class="form-group">
                        <label for="neighborhood">Bairro</label>
                        <input type="text" id="neighborhood" name="neighborhood" placeholder="Bairro">
                    </div>
                    
                    <div class="form-group">
                        <label for="zipcode">CEP</label>
                        <input type="text" id="zipcode" name="zipcode" placeholder="00000-000">
                    </div>
                </div>
                
                <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 16px;">
                    <div class="form-group">
                        <label for="city">Cidade</label>
                        <input type="text" id="city" name="city" placeholder="Cidade">
                    </div>
                    
                    <div class="form-group">
                        <label for="state">Estado</label>
                        <input type="text" id="state" name="state" placeholder="UF" maxlength="2">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="instagram">Instagram</label>
                    <input type="text" id="instagram" name="instagram" placeholder="@seuinstagram">
                </div>
                <% } %>
                
                <button type="submit" class="btn-submit" id="submit-btn" style="margin-top: 24px;">
                    <i class="fas fa-paper-plane"></i> Enviar
                </button>
            </form>
        </div>
        
        <% } %>
    </div>
    
    <script>
        const form = document.getElementById('registration-form');
        const submitBtn = document.getElementById('submit-btn');
        const token = '<%= guestList.registration_token %>';
        
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';
            
            // Coletar campos padrão
            const formData = {
                name: document.getElementById('name').value.trim(),
                whatsapp: document.getElementById('whatsapp').value.trim(),
                document: document.getElementById('document').value.trim(),
                email: document.getElementById('email')?.value.trim() || '',
                phone: document.getElementById('phone')?.value.trim() || '',
                address: document.getElementById('address')?.value.trim() || '',
                neighborhood: document.getElementById('neighborhood')?.value.trim() || '',
                city: document.getElementById('city')?.value.trim() || '',
                state: document.getElementById('state')?.value.trim().toUpperCase() || '',
                zipcode: document.getElementById('zipcode')?.value.trim() || '',
                instagram: document.getElementById('instagram')?.value.trim() || ''
            };
            
            // Coletar campos customizados se existirem
            const customResponses = {};
            const customFieldsContainer = document.getElementById('custom-fields-container');
            if (customFieldsContainer) {
                // Coletar todos os campos (incluindo radio e checkbox)
                const allCustomFields = customFieldsContainer.querySelectorAll('[name^="custom_"]');
                const fieldGroups = {};
                
                // Agrupar campos por name (para radio e checkbox que têm múltiplos inputs)
                allCustomFields.forEach(field => {
                    const fieldName = field.name.replace(/^custom_/, '');
                    if (!fieldGroups[fieldName]) {
                        fieldGroups[fieldName] = [];
                    }
                    fieldGroups[fieldName].push(field);
                });
                
                // Processar cada grupo de campos
                Object.keys(fieldGroups).forEach(fieldName => {
                    const fields = fieldGroups[fieldName];
                    if (fields.length === 1) {
                        // Campo único (input, textarea, select)
                        const field = fields[0];
                        const value = field.value.trim();
                        if (value) {
                            customResponses[fieldName] = value;
                        }
                    } else {
                        // Múltiplos campos (radio ou checkbox)
                        const checkedFields = fields.filter(f => f.checked || f.value);
                        if (checkedFields.length > 0) {
                            if (checkedFields[0].type === 'checkbox') {
                                // Checkbox: array de valores
                                customResponses[fieldName] = checkedFields.map(f => f.value.trim());
                            } else {
                                // Radio: valor único selecionado
                                const checked = checkedFields.find(f => f.checked);
                                if (checked) {
                                    customResponses[fieldName] = checked.value.trim();
                                }
                            }
                        }
                    }
                });
                
                // Validar campos obrigatórios customizados
                const requiredCustomFields = customFieldsContainer.querySelectorAll('[required]');
                for (const field of requiredCustomFields) {
                    const fieldName = field.name.replace(/^custom_/, '');
                    if (field.type === 'checkbox' || field.type === 'radio') {
                        // Para checkbox/radio, verificar se pelo menos um está marcado
                        const sameNameFields = customFieldsContainer.querySelectorAll(`[name="${field.name}"]:checked`);
                        if (sameNameFields.length === 0) {
                            alert(`Por favor, preencha o campo: ${fieldName}`);
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
                            return;
                        }
                    } else {
                        // Campo normal
                        if (!field.value || !field.value.trim()) {
                            alert(`Por favor, preencha o campo: ${fieldName}`);
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
                            return;
                        }
                    }
                }
            }
            
            // Adicionar custom_responses se houver campos customizados
            if (Object.keys(customResponses).length > 0) {
                formData.custom_responses = customResponses;
            }
            
            // Validações obrigatórias
            if (!formData.name) {
                alert('Por favor, preencha o nome completo');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
                return;
            }
            
            if (!formData.whatsapp) {
                alert('Por favor, preencha o WhatsApp');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
                return;
            }
            
            if (!formData.document) {
                alert('Por favor, preencha o CPF/CNPJ');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
                return;
            }
            
            try {
                const response = await fetch(`/api/guest-lists/public/register/${token}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                
                // Verificar se a resposta tem conteúdo antes de parsear JSON
                const contentType = response.headers.get('content-type');
                let result;
                
                if (contentType && contentType.includes('application/json')) {
                    result = await response.json();
                } else {
                    const text = await response.text();
                    console.error('Resposta não é JSON:', text);
                    throw new Error('Resposta inválida do servidor');
                }
                
                if (response.ok) {
                    form.innerHTML = `
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            <div>
                                <strong>Inscrição Confirmada!</strong>
                                <p>Você foi inscrito com sucesso no evento.</p>
                                ${result.requires_confirmation ? '<p style="margin-top: 8px; font-size: 14px;">Aguarde a confirmação da sua presença.</p>' : ''}
                            </div>
                        </div>
                    `;
                } else {
                    throw new Error(result.message || 'Erro ao realizar inscrição');
                }
            } catch (error) {
                console.error('Erro ao realizar inscrição:', error);
                let errorMessage = 'Erro ao realizar inscrição';
                
                if (error.message) {
                    errorMessage = error.message;
                } else if (error instanceof TypeError && error.message.includes('fetch')) {
                    errorMessage = 'Erro de conexão. Verifique sua internet e tente novamente.';
                }
                
                alert(errorMessage);
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Enviar';
            }
        });
    </script>
</body>
</html>

